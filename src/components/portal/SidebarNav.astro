---

<nav class="sidebar-nav">
  <div class="logo-section">
    <a href="/" class="logo-link">
      <img
        src="https://mktgfiles.britishcouncil.org/hubfs/Logos/BritishCouncil_Logo_Indigo_RGB.png"
        alt="British Council"
        class="logo"
      />
    </a>
    <h2 class="portal-title">Student Portal</h2>
  </div>

  <div class="user-profile">
    <div class="avatar">
      <span class="avatar-text">JD</span>
    </div>
    <div class="user-info">
      <h3 class="user-name">John Doe</h3>
      <p class="user-level">Level B2</p>
    </div>
  </div>

  <ul class="nav-list">
    {navItems.map((item) => (
      <li>
        <a
          href={item.href}
          class={`nav-item ${currentPage === item.name.toLowerCase().replace(' ', '-') ? 'active' : ''}`}
        >
          <span class="nav-icon" set:html={item.icon} />
          <span class="nav-text">{item.name}</span>
        </a>
      </li>
    ))}
  </ul>

  <div class="sidebar-footer">
    <button class="logout-btn">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
        <polyline points="16 17 21 12 16 7"></polyline>
        <line x1="21" y1="12" x2="9" y2="12"></line>
      </svg>
      <span>Logout</span>
    </button>
  </div>
</nav>

<style>
  .sidebar-nav {
    height: 100%;
    display: flex;
    flex-direction: column;
    background: var(--bc-sidebar-bg);
  }

  .logo-section {
    padding: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
    border-bottom: 1px solid var(--bc-light-purple);
  }

  .logo-link {
    display: inline-block;
    transition: transform 0.2s ease;
  }

  .logo-link:hover {
    transform: translateY(-2px);
  }

  .logo {
    width: 160px;
    height: auto;
    margin-bottom: 0.5rem;
  }

  .portal-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--bc-purple);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .user-profile {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 1.25rem 1.5rem;
    margin: 0 1rem 1.5rem;
    background: var(--bc-lavender);
    border-radius: 12px;
    border: 1px solid var(--bc-light-purple);
  }

  .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--bc-purple), var(--bc-pink));
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .avatar-text {
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .user-info {
    flex: 1;
    overflow: hidden;
  }

  .user-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--bc-primary-blue);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 0.125rem;
  }

  .user-level {
    font-size: 0.75rem;
    color: var(--bc-purple);
  }

  .nav-list {
    list-style: none;
    flex: 1;
    padding: 0 0.75rem;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 1rem;
    margin-bottom: 0.125rem;
    border-radius: 10px;
    color: var(--bc-dark-gray);
    text-decoration: none;
    transition: all 0.2s ease;
    position: relative;
  }

  .nav-item:hover {
    background: var(--bc-light-pink);
    color: var(--bc-primary-blue);
  }

  .nav-item.active {
    background: linear-gradient(135deg, var(--bc-light-purple), var(--bc-light-pink));
    color: var(--bc-primary-blue);
    font-weight: 600;
  }

  .nav-item.active::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 60%;
    background: var(--bc-purple);
    border-radius: 0 2px 2px 0;
  }

  .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }

  .nav-icon svg {
    stroke: var(--bc-purple);
  }

  .nav-item.active .nav-icon svg {
    stroke: var(--bc-primary-blue);
  }

  .nav-text {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .sidebar-footer {
    padding: 1rem;
    border-top: 1px solid var(--bc-light-purple);
    margin-top: auto;
  }

  .logout-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.625rem 1rem;
    background: transparent;
    border: 1px solid var(--bc-light-purple);
    border-radius: 10px;
    color: var(--bc-purple);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .logout-btn svg {
    stroke: var(--bc-purple);
  }

  .logout-btn:hover {
    background: rgba(255, 158, 199, 0.15);
    border-color: var(--bc-pink);
    color: var(--bc-pink);
  }

  .logout-btn:hover svg {
    stroke: var(--bc-pink);
  }

  @media (max-width: 768px) {
    .portal-title {
      font-size: 1.125rem;
    }

    .nav-item {
      padding: 0.75rem 1.25rem;
    }
  }
</style>