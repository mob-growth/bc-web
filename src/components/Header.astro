---
import Button from './Button.astro';

const navItems = [
  { label: 'Courses', href: '/courses', hasMegaMenu: true },
  { label: 'Exams', href: '/exams', hasMegaMenu: true },
  { label: 'Corporate', href: '/corporate' },
  { label: 'About Us', href: '/about' },
  { label: 'Contact', href: '/contact' }
