<script>
  // Carousel functionality
  function initCarousel(carouselId: string, prevBtnId: string, nextBtnId: string) {
    const carousel = document.getElementById(carouselId);
    const prevBtn = document.getElementById(prevBtnId);
    const nextBtn = document.getElementById(nextBtnId);

    if (!carousel || !prevBtn || !nextBtn) return;

    let currentPosition = 0;
    const cardWidth = 340; // min-width + gap
    const gap = 24; // 1.5rem
    const scrollAmount = cardWidth + gap;

    prevBtn.addEventListener('click', () => {
      currentPosition = Math.min(currentPosition + scrollAmount, 0);
      carousel.style.transform = `translateX(${currentPosition}px)`;
    });

    nextBtn.addEventListener('click', () => {
      const maxScroll = -(carousel.scrollWidth - carousel.parentElement!.clientWidth);
      currentPosition = Math.max(currentPosition - scrollAmount, maxScroll);
      carousel.style.transform = `translateX(${currentPosition}px)`;
    });
  }

  // Initialize both carousels
  document.addEventListener('DOMContentLoaded', () => {
    initCarousel('current-carousel', 'current-prev', 'current-next');
    initCarousel('available-carousel', 'available-prev', 'available-next');
  });
</script>

