  <script>
    // Category filtering
    const categoryPills = document.querySelectorAll('.category-pill');
    const episodeCards = document.querySelectorAll('.episode-card');

    categoryPills.forEach(pill => {
      pill.addEventListener('click', () => {
        // Update active state
        categoryPills.forEach(p => p.classList.remove('active'));
        pill.classList.add('active');

        // Filter episodes
        const category = pill.dataset.category;
        episodeCards.forEach(card => {
          if (category === 'all' || card.dataset.category === category) {
            card.style.display = 'grid';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });

    // Transcript toggle
    const transcriptToggle = document.querySelector('.transcript-toggle');
    const transcriptContent = document.querySelector('.transcript-content');

    transcriptToggle?.addEventListener('click', () => {
      const isHidden = transcriptContent.style.display === 'none';
      transcriptContent.style.display = isHidden ? 'block' : 'none';
      transcriptToggle.textContent = isHidden ? 'Hide Transcript' : 'Show Transcript';
    });

    // Play button interactions (mock)
    const playButtons = document.querySelectorAll('.play-button, .episode-play-btn, .mobile-play-btn');

    playButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const svg = btn.querySelector('svg path');
        if (svg.getAttribute('d').startsWith('M8 5v14')) {
          // Change to pause icon
          svg.setAttribute('d', 'M6 4h4v16H6zM14 4h4v16h-4z');
        } else {
          // Change to play icon
          svg.setAttribute('d', 'M8 5v14l11-7z');
        }
      });
    });

    // Level filter
    const levelFilter = document.getElementById('levelFilter');
    levelFilter?.addEventListener('change', (e) => {
      const selectedLevel = e.target.value;
      episodeCards.forEach(card => {
        if (selectedLevel === 'All Levels' || card.dataset.level === selectedLevel) {
          card.style.display = 'grid';
        } else {
          card.style.display = 'none';
        }
      });
    });

    // Duration filter
    const durationFilter = document.getElementById('durationFilter');
    durationFilter?.addEventListener('change', (e) => {
      const selectedDuration = e.target.value;
      episodeCards.forEach(card => {
        const episodeMeta = card.querySelector('.episode-meta');
        const durationText = episodeMeta?.textContent || '';
        const minutes = parseInt(durationText.match(/(\d+):/)?.[1] || '0');

        let show = true;
        if (selectedDuration === 'Under 20 min') {
          show = minutes < 20;
        } else if (selectedDuration === '20-30 min') {
          show = minutes >= 20 && minutes < 30;
        } else if (selectedDuration === '30+ min') {
          show = minutes >= 30;
        }

        card.style.display = show ? 'grid' : 'none';
      });
    });

    // Timeline interaction (mock)
    const timeline = document.querySelector('.player-timeline');
    timeline?.addEventListener('click', (e) => {
      const rect = timeline.getBoundingClientRect();
      const percent = ((e.clientX - rect.left) / rect.width) * 100;
      const progress = timeline.querySelector('.timeline-progress');
      progress.style.width = `${percent}%`;
    });

    // Add smooth scroll behavior
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        target?.scrollIntoView({ behavior: 'smooth' });
      });
    });
  </script>
