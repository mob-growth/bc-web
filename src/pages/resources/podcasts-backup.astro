    }

    .hero-title {
      font-size: 2.75rem;
      font-weight: 700;
      color: var(--bc-primary-blue);
      margin-bottom: 0.75rem;
      background: linear-gradient(135deg, var(--bc-primary-blue), #8b5cf6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-subtitle {
      font-size: 1.125rem;
      color: var(--bc-dark-gray);
      line-height: 1.6;
      margin-bottom: 2rem;
    }

    .hero-stats {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      margin-top: 2rem;
    }

    .hero-stat {
      text-align: center;
    }

    .hero-stat-value {
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--bc-primary-blue);
      margin-bottom: 0.25rem;
    }

    .hero-stat-label {
      font-size: 0.875rem;
      color: var(--bc-medium-gray);
      font-weight: 500;
    }

    .stat-divider {
      width: 1px;
      height: 40px;
      background: linear-gradient(to bottom,
        rgba(183, 148, 212, 0),
        rgba(183, 148, 212, 0.3),
        rgba(183, 148, 212, 0)
