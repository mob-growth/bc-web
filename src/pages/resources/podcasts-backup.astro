    }

    /* Main Container */
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    /* Subscribe Section */
    .subscribe-section {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: 16px;
      padding: 2rem;
      margin-top: -2rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      border: 1px solid rgba(255, 255, 255, 0.5);
      position: relative;
      z-index: 10;
    }

    .subscribe-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--bc-primary-blue);
      margin-bottom: 1rem;
    }

    .platform-links {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .platform-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.25rem;
      background: white;
      border: 2px solid var(--bc-border);
      border-radius: 12px;
      color: var(--bc-dark-gray);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.875rem;
      transition: all 0.2s ease;
    }

    .platform-btn:hover {
      border-color: var(--bc-primary-blue);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(35, 7, 90, 0.15);
    }

    .platform-icon {
      width: 20px;
      height: 20px;
    }

    /* Featured Episode */
    .featured-section {
      margin-bottom: 3rem;
    }

    .section-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--bc-primary-blue);
      margin-bottom: 1.5rem;
    }

    .featured-player {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 2rem;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.5);
      position: relative;
      overflow: hidden;
    }

    .featured-content {
      display: grid;
      grid-template-columns: 200px 1fr;
      gap: 2rem;
      align-items: center;
    }

    .featured-artwork {
      width: 200px;
      height: 200px;
      border-radius: 16px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      position: relative;
      overflow: hidden;
    }

    .featured-artwork::before {
      content: '';
      position: absolute;
      inset: 0;
      background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M20 0v40M0 20h40'/%3E%3C/g%3E%3C/svg%3E");
    }

    .featured-artwork-icon {
      position: relative;
      z-index: 1;
    }

    .featured-info {
      flex: 1;
    }

    .featured-category {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: rgba(102, 126, 234, 0.15);
      color: #667eea;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      margin-bottom: 0.75rem;
    }

    .featured-title {
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--bc-primary-blue);
      margin-bottom: 0.75rem;
    }

    .featured-description {
      color: var(--bc-medium-gray);
      margin-bottom: 1.25rem;
      line-height: 1.6;
    }

    .featured-meta {
      display: flex;
      gap: 1.5rem;
      margin-bottom: 1.5rem;
      flex-wrap: wrap;
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      color: var(--bc-medium-gray);
    }

    /* Audio Player */
    .audio-player {
      background: rgba(255, 255, 255, 0.8);
      border-radius: 12px;
      padding: 1.25rem;
      margin-top: 1rem;
    }

    .player-controls {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .play-button {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--bc-purple), var(--bc-pink));
      border: none;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: transform 0.2s ease;
      box-shadow: 0 4px 12px rgba(183, 148, 212, 0.3);
    }

    .play-button:hover {
      transform: scale(1.05);
    }

    .play-button svg {
      fill: white;
      width: 20px;
      height: 20px;
    }

    .waveform-container {
      flex: 1;
      height: 48px;
      background: rgba(183, 148, 212, 0.1);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 2px;
      padding: 0 1rem;
      overflow: hidden;
    }

    .waveform-bar {
      width: 3px;
      background: linear-gradient(to top, var(--bc-purple), var(--bc-pink));
      border-radius: 2px;
      animation: wave 1.5s ease-in-out infinite;
      opacity: 0.6;
      transition: opacity 0.3s ease;
    }

    .waveform-bar:hover {
      opacity: 1;
    }

    @keyframes wave {
      0%, 100% { height: 20%; }
      50% { height: 100%; }
    }

    .waveform-bar:nth-child(1) { animation-delay: 0s; height: 40%; }
    .waveform-bar:nth-child(2) { animation-delay: 0.1s; height: 60%; }
    .waveform-bar:nth-child(3) { animation-delay: 0.2s; height: 80%; }
    .waveform-bar:nth-child(4) { animation-delay: 0.3s; height: 50%; }
    .waveform-bar:nth-child(5) { animation-delay: 0.4s; height: 70%; }
    .waveform-bar:nth-child(6) { animation-delay: 0.5s; height: 90%; }
    .waveform-bar:nth-child(7) { animation-delay: 0.6s; height: 60%; }
    .waveform-bar:nth-child(8) { animation-delay: 0.7s; height: 75%; }
    .waveform-bar:nth-child(9) { animation-delay: 0.8s; height: 55%; }
