---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

const playbooks = [
  {
    title: 'IELTS band 7+ blueprint',
    description: 'Four staged preparation roadmap with weekly writing prompts, speaking partners and timing drills.',
    duration: '4 week journey',
    link: '#',
    accent: '#ff9edb'
  },
  {
    title: 'Young learner classroom rituals',
    description: 'Daily routines, movement breaks and storytelling techniques for ages 6-12.',
    duration: '12 lesson ideas',
    link: '#',
    accent: '#7bcfff'
  },
  {
    title: 'Business English influence kit',
    description: 'Meeting frameworks, email templates and presentation scoresheets for hybrid teams.',
    duration: 'Executive collection',
    link: '#',
    accent: '#ffd49b'
  }
];

const frameworks = [
  {
    heading: 'Assessment clarity',
    blurb: 'Understand the differences between Cambridge, IELTS and Aptis with side-by-side comparators and decision checklists.',
    items: ['Exam finder worksheet', 'Placement test benchmarks', 'Progress tracking dashboard'],
    color: '#f1e8ff'
  },
  {
    heading: 'Skills lab',
    blurb: 'Sharpen writing, listening, speaking and vocabulary with routines designed by our academic team.',
    items: ['Feedback rubric bank', 'Pronunciation warm ups', 'Vocabulary mastery cycles'],
    color: '#e4fbf8'
  },
  {
    heading: 'Teacher studio',
    blurb: 'Project plans, differentiation ideas and community spotlights for educators across Spain.',
    items: ['Differentiation planning grid', 'Project-based learning journeys', 'Teacher mentoring stories'],
    color: '#fff5f4'
  }
];

const quickGuides = [
  {
    title: 'Writing task feedback phrases',
    summary: 'Download ready-to-use annotations that make marking faster and clearer.',
    format: 'PDF guide',
    link: '#'
  },
  {
    title: 'Pronunciation warm-up wheel',
    summary: 'Spin-and-speak drills that work online or face to face in under five minutes.',
    format: 'Interactive sheet',
    link: '#'
  },
  {
    title: 'Vocabulary habit tracker',
    summary: 'Micro routines that help learners reactivate new language each week.',
    format: 'Notion template',
    link: '#'
  }
];
---

<Layout title="British Council Articles" description="Research-backed articles, playbooks and frameworks crafted by British Council Spain experts.">
  <div style="--announcement-bar-height: 0px;">
    <Header />
  </div>

  <main class="articles-hub">
    <section class="hero">
      <div class="bc-container hero__inner">
        <div class="hero__content">
          <span class="hero__badge">Expert playbooks</span>
          <h1>Deep dives, frameworks and ready-to-use research from our experts</h1>
          <p>Explore the latest articles curated by academic leaders, assessment specialists and classroom innovators. Everything is built to move your learners forward.</p>
          <div class="hero__cta">
            <a class="hero__primary" href="#playbooks">Browse playbooks</a>
            <a class="hero__secondary" href="#frameworks">Explore frameworks</a>
          </div>
          <dl class="hero__stats">
            <div>
              <dt>Research hours saved</dt>
              <dd>1.9k</dd>
            </div>
            <div>
              <dt>Editors involved</dt>
              <dd>24</dd>
            </div>
            <div>
              <dt>Downloads this month</dt>
              <dd>42k</dd>
            </div>
          </dl>
        </div>
        <div class="hero__card">
          <div class="card__inner">
            <span class="card__tag">Newest release</span>
            <h2>How to personalise exam preparation across a mixed-ability class</h2>
            <p>Use data-informed stations, flexible homework menus and reflection journals to keep every learner stretched yet supported.</p>
            <ul>
              <li>Placement analysis worksheet</li>
              <li>Adaptive homework planner</li>
              <li>Reflection journal prompts</li>
            </ul>
            <a href="#" class="card__cta">Download article</a>
          </div>
        </div>
      </div>
    </section>

    <section id="playbooks" class="playbooks">
      <div class="bc-container">
        <div class="section-heading">
          <div>
            <h2>Signature playbooks</h2>
            <p>Curated, high-impact routes designed around the goals we hear most from teachers, parents and learners.</p>
          </div>
          <button type="button" class="ghost-link">Share your goal</button>
        </div>
        <div class="playbooks__grid">
          {playbooks.map((playbook) => (
            <article class="playbook" style={`--accent:${playbook.accent};`}>
              <span class="playbook__badge">{playbook.duration}</span>
              <h3>{playbook.title}</h3>
              <p>{playbook.description}</p>
              <a href={playbook.link} class="playbook__cta">Open playbook</a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section id="frameworks" class="frameworks">
      <div class="bc-container frameworks__grid">
        {frameworks.map((item) => (
          <article class="framework" style={`background:${item.color};`}>
            <header>
              <span class="framework__title">{item.heading}</span>
              <p>{item.blurb}</p>
            </header>
            <ul>
              {item.items.map((element) => (
                <li>{element}</li>
              ))}
            </ul>
            <button type="button">Download bundle</button>
          </article>
        ))}
      </div>
    </section>

    <section class="quick">
      <div class="bc-container">
        <div class="section-heading">
          <div>
            <h2>Quick-reference guides</h2>
            <p>One-page resources you can drop into planning meetings, classrooms or independent study in seconds.</p>
          </div>
          <a class="ghost-link" href="/resources/downloads">See all downloads</a>
        </div>
        <div class="quick__grid">
          {quickGuides.map((guide) => (
            <article class="guide">
              <span class="guide__format">{guide.format}</span>
              <h3>{guide.title}</h3>
              <p>{guide.summary}</p>
              <a href={guide.link} class="guide__cta">Save to library</a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="cta">
      <div class="bc-container cta__inner">
        <div>
          <h2>Need something specific?</h2>
          <p>Tell us about your learners and we will curate a bespoke article bundle with ready-to-go resources.</p>
        </div>
        <form class="cta__form" novalidate>
          <label for="articles-email" class="sr-only">Email</label>
          <input id="articles-email" type="email" placeholder="you@school.edu" autocomplete="email" />
          <button type="button">Request curation</button>
        </form>
      </div>
    </section>
  </main>
</Layout>

<style>
  :root { color-scheme: light; }

  .articles-hub {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    padding-bottom: 6rem;
  }

  .hero {
    position: relative;
    padding: 9rem 0 6rem;
    background: radial-gradient(circle at 0% 0%, rgba(124, 77, 255, 0.15), transparent 70%),
      linear-gradient(120deg, rgba(17, 6, 50, 0.95), rgba(35, 7, 90, 0.82));
    color: white;
    overflow: hidden;
  }

  .hero::before,
  .hero::after {
    content: '';
    position: absolute;
    width: 520px;
    height: 520px;
    border-radius: 50%;
    opacity: 0.4;
    pointer-events: none;
    mix-blend-mode: screen;
    z-index: 0;
  }

  .hero::before {
    top: -210px;
    right: -160px;
    background: radial-gradient(circle, rgba(255, 94, 168, 0.4), transparent 70%);
  }

  .hero::after {
    bottom: -200px;
    left: -160px;
    background: radial-gradient(circle, rgba(47, 214, 200, 0.32), transparent 70%);
  }

  .hero__inner {
    position: relative;
    display: grid;
    gap: 4rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    align-items: stretch;
    z-index: 1;
  }

  .hero__content {
    display: grid;
    gap: 1.6rem;
  }

  .hero__badge {
    display: inline-flex;
    align-items: center;
    padding: 0.55rem 1.3rem;
    border-radius: 999px;
    font-size: 0.82rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: rgba(255, 255, 255, 0.16);
    border: 1px solid rgba(255, 255, 255, 0.22);
    backdrop-filter: blur(10px);
  }

  .hero__content h1 {
    font-size: clamp(2.6rem, 5vw, 3.8rem);
    line-height: 1.05;
    color: white;
    text-wrap: balance;
  }

  .hero__content p {
    max-width: 34rem;
    color: rgba(255, 255, 255, 0.78);
    font-size: 1.05rem;
  }

  .hero__cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .hero__primary,
  .hero__secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.9rem 1.9rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform 0.4s ease;
  }

  .hero__primary {
    color: #10043b;
    background: linear-gradient(135deg, #ffb7f2, #7c4dff);
    box-shadow: 0 18px 35px rgba(124, 77, 255, 0.34);
  }

  .hero__secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .hero__primary:hover,
  .hero__secondary:hover {
    transform: translateY(-3px);
  }

  .hero__stats {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
    margin-top: 2.4rem;
  }

  .hero__stats div {
    background: rgba(255, 255, 255, 0.12);
    border-radius: 1.4rem;
    padding: 1.4rem 1.6rem;
    border: 1px solid rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(16px);
  }

  .hero__stats dt {
    font-size: 0.82rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.65);
  }

  .hero__stats dd {
    margin-top: 0.35rem;
    font-size: 1.9rem;
    font-weight: 700;
    color: white;
  }

  .hero__card {
    border-radius: 2.6rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(18px);
    box-shadow: 0 26px 45px rgba(35, 7, 90, 0.24);
    overflow: hidden;
  }

  .card__inner {
    padding: 2.8rem;
    display: grid;
    gap: 1.3rem;
    color: rgba(255, 255, 255, 0.85);
  }

  .card__tag {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    font-size: 0.78rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: rgba(0, 0, 0, 0.3);
  }

  .card__inner h2 {
    font-size: 1.6rem;
    color: white;
  }

  .card__inner p {
    color: rgba(255, 255, 255, 0.75);
  }

  .card__inner ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.6rem;
  }

  .card__inner li {
    padding-left: 1.4rem;
    position: relative;
  }

  .card__inner li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ff9edb;
  }

  .card__cta {
    justify-self: flex-start;
    border-radius: 999px;
    padding: 0.85rem 1.8rem;
    background: linear-gradient(135deg, #54b5ff, #7c4dff);
    color: white;
    font-weight: 600;
  }

  .section-heading {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    margin-bottom: 2.8rem;
  }

  .section-heading h2 {
    font-size: clamp(2rem, 4vw, 2.8rem);
  }

  .section-heading p {
    color: var(--muted);
    max-width: 32rem;
  }

  .ghost-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-weight: 600;
    color: var(--bc-primary-blue);
    border-bottom: 1px solid rgba(35, 7, 90, 0.2);
    padding-bottom: 0.25rem;
  }

  .playbooks__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .playbook {
    position: relative;
    border-radius: 2.2rem;
    padding: 2.4rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.96), rgba(240, 238, 255, 0.94));
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 20px 42px rgba(35, 7, 90, 0.12);
    display: grid;
    gap: 1.3rem;
  }

  .playbook::before {
    content: '';
    position: absolute;
    top: -80px;
    right: -80px;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(circle, var(--accent), transparent 70%);
    opacity: 0.45;
  }

  .playbook__badge {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    font-size: 0.78rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: rgba(17, 6, 50, 0.08);
  }

  .playbook h3 {
    font-size: 1.4rem;
    color: var(--bc-primary-blue);
    position: relative;
    z-index: 1;
  }

  .playbook p {
    color: var(--muted);
    position: relative;
    z-index: 1;
  }

  .playbook__cta {
    justify-self: flex-start;
    border-radius: 999px;
    padding: 0.8rem 1.8rem;
    background: linear-gradient(135deg, #23075a, #7c4dff);
    color: white;
    font-weight: 600;
    position: relative;
    z-index: 1;
  }

  .frameworks {
    background: linear-gradient(135deg, rgba(35, 7, 90, 0.05), rgba(124, 77, 255, 0.08));
    padding: 5rem 0;
  }

  .frameworks__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .framework {
    border-radius: 2.2rem;
    padding: 2.4rem;
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 20px 42px rgba(35, 7, 90, 0.1);
    display: grid;
    gap: 1.3rem;
  }

  .framework header span {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    font-weight: 600;
    background: rgba(17, 6, 50, 0.08);
  }

  .framework header p {
    margin-top: 1.1rem;
    color: var(--muted);
  }

  .framework ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.7rem;
  }

  .framework li {
    padding-left: 1.4rem;
    position: relative;
    color: var(--muted);
  }

  .framework li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.45rem;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(35, 7, 90, 0.6);
  }

  .framework button {
    justify-self: flex-start;
    border-radius: 999px;
    padding: 0.8rem 1.8rem;
    border: none;
    font-weight: 600;
    background: rgba(17, 6, 50, 0.85);
    color: white;
  }

  .quick__grid {
    display: grid;
    gap: 1.8rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .guide {
    border-radius: 1.8rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.94);
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 18px 35px rgba(35, 7, 90, 0.12);
    display: grid;
    gap: 1rem;
  }

  .guide__format {
    font-size: 0.78rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(17, 6, 50, 0.6);
  }

  .guide h3 {
    font-size: 1.3rem;
    color: var(--bc-primary-blue);
  }

  .guide p {
    color: var(--muted);
  }

  .guide__cta {
    justify-self: flex-start;
    font-weight: 600;
    color: var(--bc-primary-blue);
  }

  .cta {
    padding: 5rem 0;
  }

  .cta__inner {
    display: grid;
    gap: 2rem;
    align-items: center;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.96), rgba(235, 234, 255, 0.98));
    padding: 3rem;
    border-radius: 2.6rem;
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 26px 45px rgba(35, 7, 90, 0.12);
  }

  .cta__inner h2 {
    font-size: clamp(2rem, 4vw, 2.6rem);
    margin-bottom: 0.8rem;
  }

  .cta__inner p {
    color: var(--muted);
    max-width: 30rem;
  }

  .cta__form {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1rem;
    background: white;
    padding: 0.6rem;
    border-radius: 999px;
    border: 1px solid rgba(35, 7, 90, 0.15);
    box-shadow: inset 0 0 0 1px rgba(124, 77, 255, 0.08);
  }

  .cta__form input {
    border: none;
    padding: 0 1.5rem;
    font-size: 1rem;
    border-radius: 999px;
    background: transparent;
    color: var(--ink);
  }

  .cta__form input:focus {
    outline: none;
  }

  .cta__form button {
    border: none;
    border-radius: 999px;
    padding: 0.85rem 1.8rem;
    font-weight: 600;
    background: linear-gradient(135deg, #ffb7f2, #7c4dff);
    color: #10043b;
    cursor: pointer;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 1023px) {
    .hero__inner {
      grid-template-columns: 1fr;
    }

    .hero__card {
      order: -1;
    }

    .card__inner {
      padding: 2.2rem;
    }
  }

  @media (max-width: 639px) {
    .hero {
      padding: 7.5rem 0 4.5rem;
    }

    .cta__form {
      grid-template-columns: 1fr;
      padding: 1rem;
    }

    .cta__form button {
      width: 100%;
    }
  }
</style>
