---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

const games = [
  { id: 1, title: 'Word Wizard Challenge', category: 'Word Games', description: 'Create words from jumbled letters before time runs out.', difficulty: 'Easy', time: 5, skills: ['Vocabulary', 'Spelling'], level: 'A1-B1', image: 'https://images.unsplash.com/photo-1632501641765-e568d28b0015?w=800&q=80', badge: 'Popular', color: '#ffd4e8' },
  { id: 2, title: 'Synonym Sprint', category: 'Word Games', description: 'Match words with their synonyms as fast as you can.', difficulty: 'Medium', time: 8, skills: ['Vocabulary', 'Critical thinking'], level: 'B1-C1', image: 'https://images.unsplash.com/photo-1606326608606-aa0b62935f2b?w=800&q=80', badge: null, color: '#b794d4' },
  { id: 3, title: 'Crossword Craze', category: 'Word Games', description: 'Solve themed crossword puzzles to expand vocabulary.', difficulty: 'Hard', time: 15, skills: ['Vocabulary', 'Reading'], level: 'B2-C2', image: 'https://images.unsplash.com/photo-1611996575749-79a3a250f948?w=800&q=80', badge: 'New', color: '#ffcce0' },
  { id: 4, title: 'Tense Detective', category: 'Grammar Challenges', description: 'Identify and correct verb tenses in interactive scenes.', difficulty: 'Medium', time: 10, skills: ['Grammar', 'Writing'], level: 'A2-B2', image: 'https://images.unsplash.com/photo-1456513080510-7bf3a84b82f8?w=800&q=80', badge: 'Featured', color: '#e8d9f5' },
  { id: 5, title: 'Preposition Adventure', category: 'Grammar Challenges', description: 'Navigate through levels by choosing the correct prepositions.', difficulty: 'Easy', time: 7, skills: ['Grammar'], level: 'A1-B1', image: 'https://images.unsplash.com/photo-1509228468518-180dd4864904?w=800&q=80', badge: null, color: '#ffd4e8' },
  { id: 6, title: 'Conditional Quest', category: 'Grammar Challenges', description: 'Master conditional sentences through branching stories.', difficulty: 'Hard', time: 12, skills: ['Grammar', 'Critical thinking'], level: 'B2-C2', image: 'https://images.unsplash.com/photo-1484480974693-6ca0a78fb36b?w=800&q=80', badge: null, color: '#dcc6f0' },
  { id: 7, title: 'Audio Accent Master', category: 'Listening Games', description: 'Identify different English accents from around the world.', difficulty: 'Medium', time: 10, skills: ['Listening', 'Cultural awareness'], level: 'B1-C1', image: 'https://images.unsplash.com/photo-1590602847861-f357a9332bbc?w=800&q=80', badge: 'Popular', color: '#b794d4' },
  { id: 8, title: 'Story Sound Match', category: 'Listening Games', description: 'Listen to short stories and match them with the correct images.', difficulty: 'Easy', time: 5, skills: ['Listening', 'Comprehension'], level: 'A1-A2', image: 'https://images.unsplash.com/photo-1507842217343-583bb7270b66?w=800&q=80', badge: null, color: '#ffcce0' },
  { id: 9, title: 'Debate Arena', category: 'Speaking Activities', description: 'Practice debating skills with AI-powered partners.', difficulty: 'Hard', time: 15, skills: ['Speaking', 'Fluency'], level: 'B2-C2', image: 'https://images.unsplash.com/photo-1475721027785-f74eccf877e2?w=800&q=80', badge: 'Featured', color: '#e8d9f5' },
  { id: 10, title: 'Pronunciation Pro', category: 'Speaking Activities', description: 'Tackle tricky sounds with instant feedback and pacing drills.', difficulty: 'Medium', time: 8, skills: ['Speaking', 'Pronunciation'], level: 'A2-C1', image: 'https://images.unsplash.com/photo-1516280440614-37939bbacd81?w=800&q=80', badge: 'New', color: '#ffd4e8' },
  { id: 11, title: 'Role Play Scenarios', category: 'Speaking Activities', description: 'Practice real-life conversations in everyday situations.', difficulty: 'Easy', time: 10, skills: ['Speaking', 'Fluency'], level: 'A2-B2', image: 'https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=800&q=80', badge: null, color: '#b794d4' },
  { id: 12, title: 'Flashcard Frenzy', category: 'Vocabulary Builders', description: 'Memorise new words with interactive flashcards and mini games.', difficulty: 'Easy', time: 5, skills: ['Vocabulary', 'Memory'], level: 'A1-C2', image: 'https://images.unsplash.com/photo-1503676260728-1c00da094a0b?w=800&q=80', badge: 'Popular', color: '#ffcce0' },
  { id: 13, title: 'Idiom Island', category: 'Vocabulary Builders', description: 'Explore idioms with contextual examples and challenges.', difficulty: 'Medium', time: 12, skills: ['Vocabulary', 'Culture'], level: 'B1-C1', image: 'https://images.unsplash.com/photo-1559827260-dc66d52bef19?w=800&q=80', badge: null, color: '#dcc6f0' },
  { id: 14, title: 'Word Pit Stop', category: 'Vocabulary Builders', description: 'Race to fix sentences by swapping the best vocabulary choices.', difficulty: 'Medium', time: 9, skills: ['Vocabulary', 'Decision making'], level: 'B1-B2', image: 'https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=800&q=80', badge: null, color: '#e4fbf8' }
];

const descriptions = {
  'Word Games': 'Fast, replayable warm ups that stretch vocabulary and spelling in minutes.',
  'Grammar Challenges': 'Story-led missions that make tricky structures intuitive and memorable.',
  'Listening Games': 'Immersive audio adventures that train comprehension across accents.',
  'Speaking Activities': 'Confidence boosting role plays, debates and pronunciation labs.',
  'Vocabulary Builders': 'Progressive drills and journeys to keep new language active.'
};

const grouped = games.reduce((acc, game) => {
  acc[game.category] = acc[game.category] || [];
  acc[game.category].push(game);
  return acc;
}, {});

const categories = Object.entries(grouped).map(([name, list]) => ({
  name,
  description: descriptions[name] || '',
  highlight: list[0]
}));

const featuredGames = games.filter((game) => ['Popular', 'Featured', 'New'].includes(game.badge)).slice(0, 6);
const quickChallenges = games.filter((game) => game.time <= 8).slice(0, 6);
---

<Layout title="Games and Activities" description="Interactive English learning games curated by British Council Spain." >
  <div style="--announcement-bar-height: 0px;">
    <Header />
  </div>

  <main class="games-hub">
    <section class="hero">
      <div class="bc-container hero__inner">
        <div class="hero__content">
          <span class="hero__badge">Interactive lab</span>
          <h1>Games that make English practice feel like a mission</h1>
          <p>Drop these beautifully crafted activities into lessons, clubs or independent study. Every game is designed by our teachers to build confidence while keeping energy high.</p>
          <div class="hero__cta">
            <a class="hero__primary" href="#featured">Play featured missions</a>
            <a class="hero__secondary" href="#worlds">Browse game worlds</a>
          </div>
          <dl class="hero__stats">
            <div>
              <dt>Ready-to-play titles</dt>
              <dd>35+</dd>
            </div>
            <div>
              <dt>Average session</dt>
              <dd>12 min</dd>
            </div>
            <div>
              <dt>Teacher favourites</dt>
              <dd>14</dd>
            </div>
          </dl>
        </div>
        <div class="hero__panel">
          <div class="panel__mask">
            <span class="panel__tag">Live scoreboard</span>
            <h2>Today&apos;s leader missions</h2>
            <ul>
              {featuredGames.slice(0, 3).map((game) => (
                <li>
                  <span>{game.title}</span>
                  <span>{game.time} min</span>
                </li>
              ))}
            </ul>
            <a href="#featured" class="panel__cta">See full playlist</a>
          </div>
        </div>
      </div>
    </section>

    <section id="worlds" class="worlds">
      <div class="bc-container">
        <div class="section-heading">
          <div>
            <h2>Choose your game world</h2>
            <p>Collections that bundle warm ups, main quests and reflective cooldowns for every objective.</p>
          </div>
          <button type="button" class="ghost-link">Build my own pack</button>
        </div>
        <div class="worlds__grid">
          {categories.map((category) => (
            <article class="world" style={`--accent:${category.highlight.color};`}>
              <header>
                <span class="world__chip">{category.name}</span>
                <h3>{category.description}</h3>
              </header>
              <div class="world__preview" style={`background-image:url('${category.highlight.image}');`}></div>
              <ul>
                {category.highlight.skills.map((skill) => (
                  <li>{skill}</li>
                ))}
              </ul>
              <button type="button">Open world</button>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section id="featured" class="featured">
      <div class="bc-container">
        <div class="section-heading">
          <div>
            <h2>Featured missions</h2>
            <p>High-impact activities with teacher guides, printable assets and extension ideas.</p>
          </div>
          <a class="ghost-link" href="/resources/downloads">Grab printable packs</a>
        </div>
        <div class="featured__grid">
          {featuredGames.map((game) => (
            <article class="mission" style={`--tone:${game.color};`}>
              {game.badge && <span class="mission__badge">{game.badge}</span>}
              <div class="mission__image" style={`background-image:url('${game.image}');`}></div>
              <div class="mission__body">
                <h3>{game.title}</h3>
                <p>{game.description}</p>
                <div class="mission__meta">
                  <span>{game.difficulty}</span>
                  <span>{game.time} min</span>
                  <span>{game.level}</span>
                </div>
                <a href="#" class="mission__cta">Launch game</a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="quick">
      <div class="bc-container">
        <div class="section-heading">
          <div>
            <h2>Quick challenges</h2>
            <p>Perfect for warm ups, exit tickets or homework boosts when you only have a few minutes.</p>
          </div>
          <button type="button" class="ghost-link">Download challenge cards</button>
        </div>
        <div class="quick__grid">
          {quickChallenges.map((game) => (
            <article class="challenge">
              <span class="challenge__type">{game.category}</span>
              <h3>{game.title}</h3>
              <p>{game.description}</p>
              <div class="challenge__meta">
                <span>{game.time} min</span>
                <span>{game.difficulty}</span>
              </div>
              <a href="#" class="challenge__cta">Play now</a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="cta">
      <div class="bc-container cta__inner">
        <div>
          <h2>Want a curated playlist for your class?</h2>
          <p>Tell us the age, level and learning goal. We will build a mission pack with printable resources in under 48 hours.</p>
        </div>
        <form class="cta__form" novalidate>
          <label for="games-email" class="sr-only">Email</label>
          <input id="games-email" type="email" placeholder="you@school.edu" autocomplete="email" />
          <button type="button">Request playlist</button>
        </form>
      </div>
    </section>
  </main>
</Layout>

<style>
  :root { color-scheme: light; }

  .games-hub {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    padding-bottom: 6rem;
  }

  .hero {
    position: relative;
    padding: 9rem 0 6rem;
    background: radial-gradient(circle at 0% 0%, rgba(124, 77, 255, 0.16), transparent 70%),
      linear-gradient(120deg, rgba(17, 6, 50, 0.95), rgba(35, 7, 90, 0.82));
    color: white;
    overflow: hidden;
  }

  .hero::before,
  .hero::after {
    content: '';
    position: absolute;
    width: 520px;
    height: 520px;
    border-radius: 50%;
    opacity: 0.4;
    pointer-events: none;
    mix-blend-mode: screen;
    z-index: 0;
  }

  .hero::before {
    top: -210px;
    right: -160px;
    background: radial-gradient(circle, rgba(255, 94, 168, 0.4), transparent 70%);
  }

  .hero::after {
    bottom: -200px;
    left: -160px;
    background: radial-gradient(circle, rgba(47, 214, 200, 0.32), transparent 70%);
  }

  .hero__inner {
    position: relative;
    display: grid;
    gap: 4rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    align-items: stretch;
    z-index: 1;
  }

  .hero__content {
    display: grid;
    gap: 1.6rem;
  }

  .hero__badge {
    display: inline-flex;
    align-items: center;
    padding: 0.55rem 1.3rem;
    border-radius: 999px;
    font-size: 0.82rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: rgba(255, 255, 255, 0.16);
    border: 1px solid rgba(255, 255, 255, 0.22);
    backdrop-filter: blur(10px);
  }

  .hero__content h1 {
    font-size: clamp(2.6rem, 5vw, 3.8rem);
    line-height: 1.05;
    color: white;
    text-wrap: balance;
  }

  .hero__content p {
    max-width: 34rem;
    color: rgba(255, 255, 255, 0.78);
    font-size: 1.05rem;
  }

  .hero__cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .hero__primary,
  .hero__secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.9rem 1.9rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform 0.4s ease;
  }

  .hero__primary {
    color: #10043b;
    background: linear-gradient(135deg, #ffb7f2, #7c4dff);
    box-shadow: 0 18px 35px rgba(124, 77, 255, 0.34);
  }

  .hero__secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .hero__primary:hover,
  .hero__secondary:hover {
    transform: translateY(-3px);
  }

  .hero__stats {
    display: grid;
    gap: 1.4rem;
    grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
    margin-top: 2.4rem;
  }

  .hero__stats div {
    background: rgba(255, 255, 255, 0.12);
    border-radius: 1.4rem;
    padding: 1.4rem 1.6rem;
    border: 1px solid rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(16px);
  }

  .hero__stats dt {
    font-size: 0.82rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.65);
  }

  .hero__stats dd {
    margin-top: 0.35rem;
    font-size: 1.9rem;
    font-weight: 700;
    color: white;
  }

  .hero__panel {
    border-radius: 2.6rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(18px);
    box-shadow: 0 26px 45px rgba(35, 7, 90, 0.24);
    overflow: hidden;
    display: grid;
    place-items: center;
    position: relative;
  }

  .hero__panel::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url('https://images.unsplash.com/photo-1511512578047-dfb367046420?w=800&q=80');
    background-size: cover;
    background-position: center;
    opacity: 0.15;
    z-index: 0;
  }

  .panel__mask {
    width: 100%;
    padding: 2.6rem;
    display: grid;
    gap: 1.4rem;
    color: rgba(255, 255, 255, 0.85);
    position: relative;
    z-index: 1;
  }

  .panel__tag {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    font-size: 0.78rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: rgba(0, 0, 0, 0.3);
  }

  .panel__mask h2 {
    font-size: 1.6rem;
    color: white;
  }

  .panel__mask ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.6rem;
  }

  .panel__mask li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    border-radius: 1.2rem;
    background: rgba(0, 0, 0, 0.3);
    font-size: 0.92rem;
  }

  .panel__cta {
    justify-self: flex-start;
    border-radius: 999px;
    padding: 0.85rem 1.8rem;
    background: linear-gradient(135deg, #54b5ff, #7c4dff);
    color: white;
    font-weight: 600;
  }

  .section-heading {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    margin-bottom: 2.8rem;
  }

  .section-heading h2 {
    font-size: clamp(2rem, 4vw, 2.8rem);
  }

  .section-heading p {
    color: var(--muted);
    max-width: 32rem;
  }

  .ghost-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-weight: 600;
    color: var(--bc-primary-blue);
    border-bottom: 1px solid rgba(35, 7, 90, 0.2);
    padding-bottom: 0.25rem;
  }

  .worlds__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .world {
    position: relative;
    border-radius: 2.2rem;
    padding: 2.2rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(240, 238, 255, 0.92));
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 20px 40px rgba(35, 7, 90, 0.12);
    display: grid;
    gap: 1.4rem;
  }

  .world::before {
    content: '';
    position: absolute;
    top: -80px;
    right: -80px;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(circle, var(--accent), transparent 70%);
    opacity: 0.45;
  }

  .world header {
    position: relative;
    z-index: 1;
    display: grid;
    gap: 0.8rem;
  }

  .world__chip {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    font-weight: 600;
    background: rgba(17, 6, 50, 0.08);
  }

  .world h3 {
    color: var(--bc-primary-blue);
    font-size: 1.3rem;
  }

  .world__preview {
    height: 180px;
    border-radius: 1.6rem;
    background-size: cover;
    background-position: center;
    position: relative;
    z-index: 1;
  }

  .world ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.6rem;
    position: relative;
    z-index: 1;
  }

  .world li {
    padding-left: 1.4rem;
    color: var(--muted);
    position: relative;
  }

  .world li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.45rem;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--accent);
  }

  .world button {
    justify-self: flex-start;
    border-radius: 999px;
    padding: 0.8rem 1.8rem;
    border: none;
    font-weight: 600;
    background: rgba(17, 6, 50, 0.85);
    color: white;
    position: relative;
    z-index: 1;
  }

  .featured__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .mission {
    position: relative;
    border-radius: 2.2rem;
    overflow: hidden;
    display: grid;
    grid-template-rows: 200px auto;
    background: white;
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 22px 45px rgba(35, 7, 90, 0.12);
  }

  .mission::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), var(--tone, rgba(240, 238, 255, 0.92)));
    opacity: 0.45;
  }

  .mission__badge {
    position: absolute;
    top: 1.2rem;
    left: 1.2rem;
    padding: 0.35rem 1rem;
    border-radius: 999px;
    background: rgba(0, 0, 0, 0.55);
    color: white;
    font-size: 0.78rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    z-index: 2;
  }

  .mission__image {
    background-size: cover;
    background-position: center;
    position: relative;
    z-index: 1;
  }

  .mission__body {
    position: relative;
    z-index: 1;
    padding: 2.2rem;
    display: grid;
    gap: 1.1rem;
  }

  .mission__body h3 {
    font-size: 1.4rem;
    color: var(--bc-primary-blue);
  }

  .mission__body p {
    color: var(--muted);
  }

  .mission__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem 1.2rem;
    font-size: 0.85rem;
    color: var(--muted);
  }

  .mission__cta {
    justify-self: flex-start;
    border-radius: 999px;
    padding: 0.8rem 1.8rem;
    background: linear-gradient(135deg, #23075a, #7c4dff);
    color: white;
    font-weight: 600;
  }

  .quick__grid {
    display: grid;
    gap: 1.2rem;
    grid-template-columns: repeat(6, 1fr);
  }

  .challenge {
    border-radius: 1.6rem;
    padding: 1.6rem 1.4rem;
    background: rgba(255, 255, 255, 0.94);
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 12px 28px rgba(35, 7, 90, 0.1);
    display: grid;
    gap: 0.8rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .challenge::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(255, 158, 219, 0.2), rgba(124, 77, 255, 0.15));
    transition: all 0.4s ease;
  }

  .challenge:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 45px rgba(35, 7, 90, 0.18);
    border-color: rgba(124, 77, 255, 0.25);
  }

  .challenge:hover::before {
    transform: scale(1.3);
    opacity: 0.8;
  }

  .challenge:nth-child(1)::before { background: linear-gradient(135deg, rgba(255, 212, 155, 0.25), rgba(255, 94, 168, 0.2)); }
  .challenge:nth-child(2)::before { background: linear-gradient(135deg, rgba(124, 77, 255, 0.2), rgba(123, 207, 255, 0.25)); }
  .challenge:nth-child(3)::before { background: linear-gradient(135deg, rgba(255, 158, 219, 0.25), rgba(220, 198, 240, 0.2)); }
  .challenge:nth-child(4)::before { background: linear-gradient(135deg, rgba(255, 204, 224, 0.25), rgba(255, 183, 242, 0.2)); }
  .challenge:nth-child(5)::before { background: linear-gradient(135deg, rgba(220, 198, 240, 0.25), rgba(124, 77, 255, 0.2)); }
