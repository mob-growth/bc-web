---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';

const heroArticle = {
  slug: 'english-exams-school-age-learners',
  title: '10 essential checkpoints before choosing an English exam',
  excerpt: 'From Young Learners to IELTS, discover the framework our experts use to match every learner with the perfect assessment pathway.',
  image: 'https://images.unsplash.com/photo-1456513080510-7bf3a84b82f8?w=1600&q=80',
  category: 'Exam insights',
  categoryColor: '#f59e0b',
  author: 'British Council Spain',
  readTime: '8 min read',
  date: '29 July 2025'
};

const curatedSpotlights = [
  {
    slug: 'how-british-council-uses-ai-language-assessment',
    title: 'How AI is reshaping English assessment',
    description: 'Step inside our assessment labs to see how adaptive tech delivers fair, fast feedback.',
    category: 'Innovation',
    categoryColor: '#8b5cf6',
    image: 'https://images.unsplash.com/photo-1677442136019-21780ecad995?w=900&q=80'
  },
  {
    slug: 'right-test-right-time',
    title: 'The right test at the right time',
    description: 'A decision tree designed by our academic team to help families plan milestone exams.',
    category: 'Families',
    categoryColor: '#10b981',
    image: 'https://images.unsplash.com/photo-1434030216411-0b793f4b4173?w=900&q=80'
  },
  {
    slug: 'grammar-tips-intermediate-learners',
    title: 'Grammar confidence zone',
    description: 'Fast-track drills and sticky explanations for B1-B2 learners who want clarity.',
    category: 'Grammar',
    categoryColor: '#ec4899',
    image: 'https://images.unsplash.com/photo-1488190211105-8b0e65b80b4e?w=900&q=80'
  }
];

const newsroomHighlights = [
  {
    slug: 'ielts-preparation-success-strategies',
    title: 'IELTS success playlist',
    emoji: 'Audio',
    summary: 'Weekly rehearsal plans for Speaking, Writing and Listening with printable trackers.'
  },
  {
    slug: 'teaching-english-young-learners',
    title: 'Young learner mission packs',
    emoji: 'Launch',
    summary: 'Classroom missions, stories and badges that keep 6-12 year olds proud and progressing.'
  },
  {
    slug: 'business-english-communication-skills',
    title: 'Boardroom English toolkit',
    emoji: 'Pro',
    summary: 'Meeting decks, email templates and coaching prompts for hybrid teams.'
  },
  {
    slug: 'vocabulary-building-techniques',
    title: 'Vocabulary rituals to stay fluent',
    emoji: 'Focus',
    summary: 'Routines and apps that help advanced learners keep language agile.'
  }
];

const quickReads = [
  {
    slug: 'speaking-confidence-teenagers',
    title: 'Confidence hacks for teen speakers',
    duration: '6 min read',
    type: 'Teens',
    palette: '#ffd4e8'
  },
  {
    slug: 'grammar-tips-intermediate-learners',
    title: 'Master tricky verb patterns in a week',
    duration: '7 min read',
    type: 'Grammar',
    palette: '#f1e8ff'
  },
  {
    slug: 'how-british-council-uses-ai-language-assessment',
    title: 'Behind the scenes of our AI lab',
    duration: '10 min read',
    type: 'Innovation',
    palette: '#e4fbf8'
  }
];

const editorialSeries = [
  {
    title: 'Teacher notebooks',
    description: 'Classroom stories and ready-to-launch projects curated by our senior teachers.',
    articles: [
      'Mission-based projects for curious teens',
      'How to build feedback loops that stick',
      'Blending AI tools with human teaching intuition'
    ],
    accent: '#ff9edb'
  },
  {
    title: 'Learner playbooks',
    description: 'Step-by-step journeys that guide you from placement to proficiency.',
    articles: [
      'A 30 day exam confidence schedule',
      'Pronunciation drills to record and replay',
      'Time-saving vocabulary routines'
    ],
    accent: '#7bcfff'
  }
];
---

<Layout title="British Council Blog" description="A beautifully curated journal of English learning stories, strategies and success paths from British Council Spain.">
  <Header />

  <main class="blog-hub">
    <section class="hero">
      <div class="bc-container hero__inner">
        <div class="hero__copy">
          <span class="hero__badge">British Council journal</span>
          <h1>Ideas, stories and strategies crafted for curious English learners</h1>
          <p>Our academic teams share research-backed routines, classroom wins and exam-ready roadmaps. Explore the latest thinking before it lands in your inbox.</p>
          <div class="hero__meta">
            <span>Weekly insights</span>
            <span>Written by our teaching community</span>
            <span>Download-ready resources</span>
          </div>
          <div class="hero__actions">
            <a href={`/${heroArticle.slug}`} class="hero__primary">Read the feature</a>
            <button type="button" class="hero__secondary">Subscribe for updates</button>
          </div>
        </div>
        <article class="hero__feature">
          <div class="hero__image" style={`background-image:url('${heroArticle.image}');`}>
            <span class="hero__tag" style={`--tag:${heroArticle.categoryColor};`}>{heroArticle.category}</span>
          </div>
          <div class="hero__details">
            <h2>{heroArticle.title}</h2>
            <p>{heroArticle.excerpt}</p>
            <div class="hero__stats">
              <span>{heroArticle.readTime}</span>
              <span>{heroArticle.date}</span>
              <span>{heroArticle.author}</span>
            </div>
          </div>
        </article>
      </div>
    </section>

    <section class="curation">
      <div class="bc-container">
        <div class="section-heading">
          <div>
            <h2>Editorial spotlights</h2>
            <p>Hand-picked pieces that set the tone for the month&apos;s learning themes.</p>
          </div>
          <button type="button" class="ghost-link">View all stories</button>
        </div>
        <div class="curation__grid">
          {curatedSpotlights.map((item) => (
            <article class="spotlight" style={`--accent:${item.categoryColor};`}>
              <div class="spotlight__image" style={`background-image:url('${item.image}');`}></div>
              <div class="spotlight__body">
                <span class="spotlight__category">{item.category}</span>
                <h3>{item.title}</h3>
                <p>{item.description}</p>
                <a href={`/${item.slug}`} class="spotlight__cta">Read article</a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="newsroom">
      <div class="bc-container newsroom__inner">
        <div class="newsroom__lead">
          <h2>From the newsroom</h2>
          <p>A quick look at what our academic journalists are unpacking this week.</p>
          <a href="/resources" class="ghost-link">Explore all resources</a>
        </div>
        <div class="newsroom__list">
          {newsroomHighlights.map((item) => (
            <article class="newsroom__card">
              <span class="newsroom__emoji" aria-hidden="true">{item.emoji}</span>
              <div>
                <h3>{item.title}</h3>
                <p>{item.summary}</p>
              </div>
              <a href={`/${item.slug}`} class="newsroom__link">Open</a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="quickreads">
      <div class="bc-container">
        <div class="section-heading">
          <div>
            <h2>Quick reads for your commute</h2>
            <p>Bite-sized lessons and reflections that you can finish in under ten minutes.</p>
          </div>
          <button type="button" class="ghost-link">Download PDF digest</button>
        </div>
        <div class="quickreads__grid">
          {quickReads.map((read) => (
            <article class="quick" style={`background:${read.palette};`}>
              <span class="quick__type">{read.type}</span>
              <h3>{read.title}</h3>
              <p>{read.duration}</p>
              <a href={`/${read.slug}`} class="quick__cta">Save to reading list</a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="series">
      <div class="bc-container series__grid">
        {editorialSeries.map((series) => (
          <article class="series__card" style={`--accent:${series.accent};`}>
            <span class="series__chip">{series.title}</span>
            <h3>{series.description}</h3>
            <ul>
              {series.articles.map((entry) => (
                <li>{entry}</li>
              ))}
            </ul>
            <button type="button">See full series</button>
          </article>
        ))}
      </div>
    </section>

    <section class="cta">
      <div class="bc-container cta__inner">
        <div>
          <h2>Get the Sunday rundown</h2>
          <p>A beautifully curated email of the week&apos;s most useful tips, templates and classroom downloads.</p>
        </div>
        <form class="cta__form" novalidate>
          <label for="blog-email" class="sr-only">Email</label>
          <input id="blog-email" type="email" placeholder="you@school.edu" autocomplete="email" />
          <button type="button">Subscribe</button>
        </form>
      </div>
    </section>
  </main>
</Layout>

<style>
  :root { color-scheme: light; }

  .blog-hub {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    padding-bottom: 6rem;
  }

  .hero {
    position: relative;
    padding: 9rem 0 6rem;
    background: radial-gradient(circle at 0% 0%, rgba(124, 77, 255, 0.16), transparent 70%),
      linear-gradient(120deg, rgba(17, 6, 50, 0.96), rgba(35, 7, 90, 0.82));
    overflow: hidden;
    color: white;
  }

  .hero::before,
  .hero::after {
    content: '';
    position: absolute;
    width: 520px;
    height: 520px;
    border-radius: 50%;
    opacity: 0.4;
    pointer-events: none;
    mix-blend-mode: screen;
    z-index: 0;
  }

  .hero::before {
    top: -220px;
    right: -160px;
    background: radial-gradient(circle, rgba(255, 94, 168, 0.42), transparent 70%);
  }

  .hero::after {
    bottom: -200px;
    left: -160px;
    background: radial-gradient(circle, rgba(47, 214, 200, 0.34), transparent 70%);
  }

  .hero__inner {
    position: relative;
    display: grid;
    gap: 4rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    align-items: stretch;
    z-index: 1;
  }

  .hero__copy {
    display: grid;
    gap: 1.6rem;
  }

  .hero__badge {
    display: inline-flex;
    align-items: center;
    padding: 0.55rem 1.4rem;
    border-radius: 999px;
    font-size: 0.82rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: rgba(255, 255, 255, 0.16);
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  .hero h1 {
    font-size: clamp(2.6rem, 5vw, 3.9rem);
    line-height: 1.05;
    color: white;
    text-wrap: balance;
  }

  .hero__copy p {
    color: rgba(255, 255, 255, 0.78);
    max-width: 34rem;
    font-size: 1.05rem;
  }

  .hero__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem 1.4rem;
    font-size: 0.82rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.6);
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .hero__primary,
  .hero__secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.85rem 1.9rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform 0.4s ease;
  }

  .hero__primary {
    background: linear-gradient(135deg, #ffb7f2, #7c4dff);
    color: #10043b;
    box-shadow: 0 18px 35px rgba(124, 77, 255, 0.34);
  }

  .hero__secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .hero__primary:hover,
  .hero__secondary:hover {
    transform: translateY(-3px);
  }

  .hero__feature {
    border-radius: 2.6rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.16);
    backdrop-filter: blur(18px);
    display: grid;
    grid-template-rows: 250px auto;
    overflow: hidden;
    box-shadow: 0 26px 45px rgba(35, 7, 90, 0.25);
  }

  .hero__image {
    position: relative;
    background-size: cover;
    background-position: center;
  }

  .hero__tag {
    position: absolute;
    bottom: 1.4rem;
    left: 1.4rem;
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    font-size: 0.78rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: rgba(0, 0, 0, 0.55);
    color: white;
  }

  .hero__tag::before {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--tag, #ff9edb);
    margin-right: 0.45rem;
  }

  .hero__details {
    padding: 2.4rem;
    display: grid;
    gap: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .hero__details h2 {
    font-size: 1.6rem;
    color: white;
  }

  .hero__details p {
    color: rgba(255, 255, 255, 0.75);
  }

  .hero__stats {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem 1.4rem;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.65);
  }

  .section-heading {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    margin-bottom: 2.8rem;
  }

  .section-heading h2 {
    font-size: clamp(2rem, 4vw, 2.8rem);
  }

  .section-heading p {
    color: var(--muted);
    max-width: 32rem;
  }

  .ghost-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-weight: 600;
    color: var(--bc-primary-blue);
    border-bottom: 1px solid rgba(35, 7, 90, 0.2);
    padding-bottom: 0.25rem;
  }

  .curation__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .spotlight {
    border-radius: 2.2rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(240, 238, 255, 0.92));
    border: 1px solid rgba(17, 6, 50, 0.08);
    overflow: hidden;
    display: grid;
    grid-template-rows: 220px auto;
    box-shadow: 0 20px 40px rgba(35, 7, 90, 0.12);
  }

  .spotlight__image {
    background-size: cover;
    background-position: center;
  }

  .spotlight__body {
    padding: 2.2rem;
    display: grid;
    gap: 1.1rem;
  }

  .spotlight__category {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    background: rgba(17, 6, 50, 0.08);
    font-size: 0.78rem;
    letter-spacing: 0.05em;
  }

  .spotlight__category::before {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--accent, #ff9edb);
    margin-right: 0.45rem;
  }

  .spotlight__body h3 {
    font-size: 1.4rem;
    color: var(--bc-primary-blue);
  }

  .spotlight__body p {
    color: var(--muted);
  }

  .spotlight__cta {
    justify-self: flex-start;
    border-radius: 999px;
    padding: 0.75rem 1.6rem;
    background: linear-gradient(135deg, #23075a, #7c4dff);
    color: white;
    font-weight: 600;
  }

  .newsroom {
    background: linear-gradient(135deg, rgba(35, 7, 90, 0.05), rgba(124, 77, 255, 0.08));
    padding: 5rem 0;
  }

  .newsroom__inner {
    display: grid;
    gap: 3rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .newsroom__lead {
    display: grid;
    gap: 1.2rem;
  }

  .newsroom__list {
    display: grid;
    gap: 1.4rem;
  }

  .newsroom__card {
    border-radius: 1.8rem;
    padding: 1.6rem;
    background: rgba(255, 255, 255, 0.92);
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 16px 30px rgba(35, 7, 90, 0.1);
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 1.1rem;
    align-items: center;
  }

  .newsroom__emoji {
    font-size: 1.6rem;
  }

  .newsroom__card h3 {
    font-size: 1.15rem;
    color: var(--bc-primary-blue);
    margin-bottom: 0.4rem;
  }

  .newsroom__card p {
    color: var(--muted);
    font-size: 0.92rem;
  }

  .newsroom__link {
    color: var(--bc-primary-blue);
    font-weight: 600;
  }

  .quickreads__grid {
    display: grid;
    gap: 1.8rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .quick {
    border-radius: 1.8rem;
    padding: 1.8rem;
    display: grid;
    gap: 0.9rem;
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 18px 35px rgba(35, 7, 90, 0.12);
  }

  .quick__type {
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(17, 6, 50, 0.6);
  }

  .quick h3 {
    font-size: 1.2rem;
    color: var(--bc-primary-blue);
  }

  .quick p {
    color: rgba(17, 6, 50, 0.7);
  }

  .quick__cta {
    justify-self: flex-start;
    font-weight: 600;
    color: var(--bc-primary-blue);
  }

  .series {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.96), rgba(235, 234, 255, 0.96));
    padding: 5rem 0;
  }

  .series__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .series__card {
    border-radius: 2.2rem;
    padding: 2.4rem;
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 20px 42px rgba(35, 7, 90, 0.12);
    background: rgba(255, 255, 255, 0.95);
    display: grid;
    gap: 1.3rem;
    position: relative;
  }

  .series__card::before {
    content: '';
    position: absolute;
    top: -80px;
    right: -80px;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(circle, var(--accent), transparent 70%);
    opacity: 0.45;
  }

  .series__chip {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 1.1rem;
    border-radius: 999px;
    font-weight: 600;
    background: rgba(17, 6, 50, 0.08);
    width: fit-content;
    position: relative;
    z-index: 1;
  }

  .series h3 {
    font-size: 1.4rem;
    color: var(--bc-primary-blue);
    position: relative;
    z-index: 1;
  }

  .series ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.7rem;
    position: relative;
    z-index: 1;
  }

  .series li {
    padding-left: 1.4rem;
    color: var(--muted);
    position: relative;
  }

  .series li::before {
    content: '';
    position: absolute;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--accent);
    left: 0;
    top: 0.45rem;
  }

  .series button {
    justify-self: flex-start;
    border-radius: 999px;
    padding: 0.8rem 1.8rem;
    border: none;
    font-weight: 600;
    background: rgba(17, 6, 50, 0.85);
    color: white;
    position: relative;
    z-index: 1;
  }

  .cta {
    padding: 5rem 0;
  }

  .cta__inner {
    display: grid;
    gap: 2rem;
    align-items: center;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.96), rgba(235, 234, 255, 0.98));
    padding: 3rem;
    border-radius: 2.6rem;
    border: 1px solid rgba(17, 6, 50, 0.08);
    box-shadow: 0 26px 45px rgba(35, 7, 90, 0.12);
  }

  .cta__inner h2 {
    font-size: clamp(2rem, 4vw, 2.6rem);
    margin-bottom: 0.8rem;
  }

  .cta__inner p {
    color: var(--muted);
    max-width: 30rem;
  }

  .cta__form {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1rem;
    background: white;
    padding: 0.6rem;
    border-radius: 999px;
    border: 1px solid rgba(35, 7, 90, 0.15);
    box-shadow: inset 0 0 0 1px rgba(124, 77, 255, 0.08);
  }

  .cta__form input {
    border: none;
    padding: 0 1.5rem;
    font-size: 1rem;
    border-radius: 999px;
    background: transparent;
    color: var(--ink);
  }

  .cta__form input:focus {
    outline: none;
  }

  .cta__form button {
    border: none;
    border-radius: 999px;
    padding: 0.85rem 1.8rem;
    font-weight: 600;
    background: linear-gradient(135deg, #ffb7f2, #7c4dff);
    color: #10043b;
    cursor: pointer;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 1023px) {
    .hero__inner {
      grid-template-columns: 1fr;
    }

    .hero__feature {
      order: -1;
    }

    .hero__details {
      padding: 2rem;
    }

    .newsroom__card {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .newsroom__link {
      justify-self: center;
    }
  }

  @media (max-width: 639px) {
    .hero {
      padding: 7.5rem 0 4.5rem;
    }

    .quickreads__grid {
      grid-template-columns: 1fr;
    }

    .cta__form {
      grid-template-columns: 1fr;
      padding: 1rem;
    }

    .cta__form button {
      width: 100%;
    }
  }
</style>
