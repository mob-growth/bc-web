---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Button from '../../components/Button.astro';

const pageTitle = "Aptis ESOL - Fast English Certification | British Council Spain";
const pageDescription = "Get your official English certificate in 48-72 hours. Aptis ESOL is recognised by 16 Autonomous Communities in Spain. Book your test today.";

const variants = [
  {
    title: "Aptis ESOL General",
    description: "For general English proficiency certification covering A1 to C1 levels.",
    levels: "A1 - C1",
    icon: "user",
    features: ["All four skills tested", "Everyday English contexts", "48-72 hour results"]
  },
  {
    title: "Aptis ESOL for Teachers",
    description: "Specifically designed for teachers needing to certify their English level.",
    levels: "A1 - C1",
    icon: "teacher",
    features: ["Education-specific content", "Teacher vocabulary", "Recognised for oposiciones"]
  },
  {
    title: "Aptis ESOL Advanced",
    description: "For higher proficiency levels from B1 to C2 on the CEFR scale.",
    levels: "B1 - C2",
    icon: "star",
    features: ["Advanced level testing", "C2 certification available", "Academic & professional"]
  }
];

const benefits = [
  {
    title: "Fast Results",
    description: "Receive your results by email in just 48-72 hours after taking your exam.",
    icon: "clock"
  },
  {
    title: "Widely Recognised",
    description: "Accepted by 16 Autonomous Communities and recognised by CRUE universities.",
    icon: "certificate"
  },
  {
    title: "Flexible Testing",
    description: "Multiple test centres across Spain with convenient scheduling options.",
    icon: "calendar"
  },
  {
    title: "Ofqual Regulated",
    description: "Regulated by the UK's Office of Qualifications and Examinations Regulation.",
    icon: "shield"
  }
];

const icons = {
  user: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>',
  teacher: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>',
  star: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>',
  clock: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>',
  certificate: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>',
  calendar: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>',
  shield: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>'
};
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />

  <Hero
    title="Aptis ESOL - Fast English Certification"
    subtitle="Get your official English certificate in 48-72 hours. Aptis ESOL is an innovative multilevel test recognised by 16 Autonomous Communities in Spain and regulated by Ofqual."
    ctaPrimary={{
      text: "Book Your Test",
      href: "#book-test"
    }}
    ctaSecondary={{
      text: "Practice Tests",
      href: "#practice"
    }}
    stats={[
      { value: "48-72h", label: "Results delivery" },
      { value: "16", label: "Autonomous Communities" },
      { value: "A1-C2", label: "CEFR levels tested" }
    ]}
  />

  <main class="pt-10 pb-20">
    <!-- Key Benefits -->
    <section class="py-12" style="background: linear-gradient(180deg, transparent 0%, rgba(35, 7, 90, 0.02) 100%);">
      <div class="bc-container">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {benefits.map(benefit => (
            <div class="text-center p-6 rounded-2xl" style="background: var(--glass); backdrop-filter: blur(10px); border: 1px solid var(--line);">
              <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, var(--bc-primary-blue), #3a1570);">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[benefit.icon]} />
              </div>
              <h3 class="text-lg font-bold mb-2" style="color: var(--bc-primary-blue);">{benefit.title}</h3>
              <p class="text-sm" style="color: var(--muted);">{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Aptis Variants -->
    <section class="py-16">
      <div class="bc-container">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: var(--bc-primary-blue);">Choose Your Aptis ESOL Test</h2>
          <p class="text-lg max-w-2xl mx-auto" style="color: var(--bc-dark-gray);">
            Aptis ESOL is available in three variants to meet different needs and proficiency levels.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {variants.map((variant, index) => (
            <div class="rounded-3xl p-8 transform hover:-translate-y-2 transition-all" style="background: var(--glass); backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-lg);">
              <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6" style={`background: linear-gradient(135deg, ${index === 0 ? 'var(--bc-primary-blue), #3a1570' : index === 1 ? 'var(--bc-cta-pink), #ff69b4' : 'var(--violet), var(--pink)'});`}>
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[variant.icon]} />
              </div>

              <div class="inline-block px-3 py-1 rounded-full text-xs font-semibold mb-4" style="background: rgba(255, 20, 147, 0.1); color: var(--bc-cta-pink);">
                {variant.levels}
              </div>

              <h3 class="text-2xl font-bold mb-3" style="color: var(--bc-primary-blue);">{variant.title}</h3>
              <p class="text-base mb-6 leading-relaxed" style="color: var(--bc-dark-gray);">
                {variant.description}
              </p>

              <div class="space-y-3 mb-8">
                {variant.features.map(feature => (
                  <div class="flex items-center gap-3">
                    <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                      <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-sm" style="color: var(--muted);">{feature}</span>
                  </div>
                ))}
              </div>

              <Button variant="primary" size="md" class="w-full">
                Learn More
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </Button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Recognition Section -->
    <section class="py-20" style="background: linear-gradient(180deg, transparent 0%, rgba(35, 7, 90, 0.03) 50%, transparent 100%);">
      <div class="bc-container">
        <div class="max-w-4xl mx-auto text-center">
          <div class="w-20 h-20 mx-auto mb-6 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, var(--bc-cta-pink), #ff69b4);">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>

          <h2 class="text-3xl md:text-4xl font-bold mb-6" style="color: var(--bc-primary-blue);">
            Official Recognition
          </h2>
          <p class="text-lg mb-8 leading-relaxed" style="color: var(--bc-dark-gray);">
            Aptis ESOL is officially recognised by <strong>16 Autonomous Communities</strong> and <strong>CRUE</strong> (Conference of Rectors of Spanish Universities). It is regulated by <strong>Ofqual</strong>, the Office of Qualifications and Examinations Regulation in England.
          </p>

          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div class="p-6 rounded-2xl" style="background: var(--glass); border: 1px solid var(--line);">
              <p class="text-3xl font-bold mb-2" style="color: var(--bc-primary-blue);">16/17</p>
              <p class="text-sm" style="color: var(--muted);">Autonomous Communities</p>
            </div>
            <div class="p-6 rounded-2xl" style="background: var(--glass); border: 1px solid var(--line);">
              <p class="text-3xl font-bold mb-2" style="color: var(--bc-primary-blue);">CRUE</p>
              <p class="text-sm" style="color: var(--muted);">University Recognition</p>
            </div>
            <div class="p-6 rounded-2xl" style="background: var(--glass); border: 1px solid var(--line);">
              <p class="text-3xl font-bold mb-2" style="color: var(--bc-primary-blue);">Ofqual</p>
              <p class="text-sm" style="color: var(--muted);">Regulated Qualification</p>
            </div>
          </div>

          <div class="p-6 rounded-2xl text-left" style="background: rgba(255, 20, 147, 0.05); border: 1px solid rgba(255, 20, 147, 0.2);">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 mt-1" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="font-semibold mb-1" style="color: var(--bc-primary-blue);">Important Note</p>
                <p class="text-sm" style="color: var(--bc-dark-gray);">
                  You should always confirm Aptis ESOL validity with the institution where you need to present your accreditation.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Perfect For Section -->
    <section class="py-16">
      <div class="bc-container">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: var(--bc-primary-blue);">Perfect For</h2>
          <p class="text-lg max-w-2xl mx-auto" style="color: var(--bc-dark-gray);">
            Aptis ESOL is ideal for various professional and academic purposes
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="p-6 rounded-2xl text-center transform hover:-translate-y-2 transition-all" style="background: var(--glass); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
            <div class="w-14 h-14 mx-auto mb-4 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
              <svg class="w-7 h-7" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
              </svg>
            </div>
            <h3 class="font-bold mb-2" style="color: var(--bc-primary-blue);">University Students</h3>
            <p class="text-sm" style="color: var(--muted);">Certify English for degree requirements</p>
          </div>

          <div class="p-6 rounded-2xl text-center transform hover:-translate-y-2 transition-all" style="background: var(--glass); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
            <div class="w-14 h-14 mx-auto mb-4 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
              <svg class="w-7 h-7" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-bold mb-2" style="color: var(--bc-primary-blue);">Public Sector</h3>
            <p class="text-sm" style="color: var(--muted);">Oposiciones certification</p>
          </div>

          <div class="p-6 rounded-2xl text-center transform hover:-translate-y-2 transition-all" style="background: var(--glass); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
            <div class="w-14 h-14 mx-auto mb-4 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
              <svg class="w-7 h-7" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="font-bold mb-2" style="color: var(--bc-primary-blue);">Teachers</h3>
            <p class="text-sm" style="color: var(--muted);">Specialized teacher certification</p>
          </div>

          <div class="p-6 rounded-2xl text-center transform hover:-translate-y-2 transition-all" style="background: var(--glass); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
            <div class="w-14 h-14 mx-auto mb-4 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
              <svg class="w-7 h-7" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="font-bold mb-2" style="color: var(--bc-primary-blue);">Professionals</h3>
            <p class="text-sm" style="color: var(--muted);">Career advancement proof</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Corporate Assessment Link -->
    <section class="py-16" style="background: linear-gradient(180deg, transparent 0%, rgba(35, 7, 90, 0.02) 100%);">
      <div class="bc-container">
        <div class="max-w-4xl mx-auto">
          <div class="rounded-3xl p-8 md:p-12" style="background: var(--glass); backdrop-filter: blur(10px); border: 1px solid var(--line);">
            <div class="flex flex-col md:flex-row items-center justify-between gap-6">
              <div>
                <h3 class="text-2xl md:text-3xl font-bold mb-3" style="color: var(--bc-primary-blue);">Need Aptis for Your Organization?</h3>
                <p class="text-lg" style="color: var(--bc-dark-gray);">Discover how Aptis can help assess your team's English proficiency for training and development.</p>
              </div>
              <div class="flex-shrink-0">
                <Button href="/courses/corporate/assessment" variant="primary" size="lg" class="whitespace-nowrap">
                  Corporate Solutions
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section id="book-test" class="py-20 relative overflow-hidden">
      <div class="absolute inset-0" style="background: linear-gradient(135deg, var(--bc-primary-blue), #3a1570);"></div>

      <div class="bc-container relative z-10 text-center text-white">
        <h2 class="text-3xl md:text-5xl font-bold mb-6">
          Get Certified in 48-72 Hours
        </h2>
        <p class="text-lg md:text-xl mb-10 max-w-2xl mx-auto" style="opacity: 0.95;">
          Book your Aptis ESOL test today and receive your results in record time. Available at multiple locations across Spain.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="secondary" size="lg" class="bg-white hover:bg-white" style="color: var(--bc-primary-blue); box-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);">
            Book Your Test
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </Button>
          <Button variant="outline" size="lg" style="border: 2px solid white; background: transparent; color: white;">
            Free Practice
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </Button>
        </div>
      </div>
    </section>
  </main>
</Layout>