---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Hero from '../../../components/Hero.astro';
import Button from '../../../components/Button.astro';
import '../../../styles/global.css';

const heroStats = [
  { value: '2M+', label: 'Annual assessments' },
  { value: '90', label: 'Countries' },
  { value: 'Global', label: 'Recognition' }
];
---

<Layout title="English Language Assessment & Certification" description="Recruit talent, benchmark skills and measure progress with globally recognized English language assessments. Over 2 million assessments delivered annually across 90 countries.">
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <Hero
      title="English Language Assessments to recruit talent, benchmark skills and measure progress"
      subtitle="Through testing and assessment, we help our clients recruit and retain the right talent, support students to gain admission to institutions around world, and help businesses inform and measure training decisions."
      ctaPrimary={{ text: 'Book Consultation', href: '/contact' }}
      ctaSecondary={{ text: 'View Assessments', href: '#assessments' }}
      stats={heroStats}
    />

    <!-- Assessment Solutions Overview -->
    <section id="assessments" class="py-20" style="background: transparent;">
      <div class="bc-container">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: var(--bc-primary-blue);">Comprehensive Assessment Solutions</h2>
          <p class="text-lg max-w-3xl mx-auto" style="color: var(--bc-dark-gray);">
            Scalable, technology-enabled testing linked to CEFR English levels and globally recognized
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-8">
          <!-- EnglishScore -->
          <div style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border-radius: var(--radius-lg); border: 1px solid var(--line); box-shadow: var(--shadow-lg);" class="p-10">
            <div class="flex items-start space-x-4 mb-6">
              <div class="w-16 h-16 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, var(--mint), var(--sky));">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-2xl font-bold mb-2" style="color: var(--bc-primary-blue);">EnglishScore</h3>
                <p class="text-sm" style="color: var(--bc-cta-pink); font-weight: 600;">Mobile-proctored remote testing</p>
              </div>
            </div>

            <p class="text-lg mb-6 leading-relaxed" style="color: var(--bc-dark-gray);">
              World's only mobile-proctored English test - quick, scalable solution for remote testing
            </p>

            <div class="mb-6">
              <h4 class="font-semibold mb-3" style="color: var(--bc-primary-blue);">Key Features:</h4>
              <ul class="space-y-2">
                <li class="flex items-start">
                  <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span style="color: var(--bc-dark-gray);">Tests receptive skills (listening and reading)</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span style="color: var(--bc-dark-gray);">Simple, trusted way to check English proficiency</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span style="color: var(--bc-dark-gray);">Inform training decisions quickly</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span style="color: var(--bc-dark-gray);">At-scale remote workforce assessment</span>
                </li>
              </ul>
            </div>

            <div class="flex flex-wrap gap-2 mb-6">
              <span class="px-3 py-1 rounded-full text-xs font-semibold" style="background: rgba(35, 7, 90, 0.05); color: var(--bc-primary-blue);">Mobile-First</span>
              <span class="px-3 py-1 rounded-full text-xs font-semibold" style="background: linear-gradient(135deg, rgba(255, 20, 147, 0.1), rgba(255, 20, 147, 0.05)); color: var(--bc-cta-pink);">Quick Results</span>
