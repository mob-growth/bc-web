---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Button from '../../components/Button.astro';

const pageTitle = "English Courses for Adults - British Council Spain";
const pageDescription = "Transform your career and life with our English courses for adults. Flexible schedules, expert teachers, and internationally recognized certifications.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />

  <!-- Hero Section -->
  <Hero
    title="English Courses for Adults"
    subtitle="Transform your career prospects and open new opportunities. Our adult English courses are designed for your busy life, with flexible schedules and practical, results-driven learning."
    ctaPrimary={{
      text: "Free Level Test",
      href: "#contact"
    }}
    ctaSecondary={{
      text: "View All Courses",
      href: "#courses"
    }}
    stats={[
      { value: "18+", label: "Adult Learners" },
      { value: "Flexible", label: "Schedules" },
      { value: "15", label: "Centers" }
    ]}
  />

  <!-- Professional Development Badge -->
  <section class="py-8 md:py-12" style="background: transparent;">
    <div class="bc-container">
      <div class="text-center px-4">
        <div class="inline-flex items-center gap-2 sm:gap-4 px-4 sm:px-8 py-3 sm:py-4 rounded-full" style="background: linear-gradient(135deg, rgba(124, 77, 255, 0.15), rgba(84, 181, 255, 0.2)); border: 2px solid rgba(124, 77, 255, 0.3);">
          <svg class="w-6 h-6 sm:w-8 sm:h-8" style="color: var(--violet);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span class="text-base sm:text-xl font-bold" style="color: var(--bc-primary-blue);">Professional Development & Career Growth</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Courses Section -->
  <section id="courses" class="py-12 md:py-16 lg:py-20" style="background: transparent;">
    <div class="bc-container px-4">
      <div class="text-center mb-10 md:mb-16">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 md:mb-4" style="color: var(--bc-primary-blue);">
          Find Your Perfect Course
        </h2>
        <p class="text-base sm:text-lg md:text-xl max-w-3xl mx-auto px-2" style="color: var(--bc-dark-gray);">
          Whether you're looking to advance your career, prepare for an exam, or simply improve your English, we have the perfect course for you
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 max-w-6xl mx-auto">
        <!-- Three Month Face to Face Course -->
        <a href="/courses/adults/termly" class="group block rounded-3xl p-6 sm:p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="flex items-start gap-4 mb-4">
            <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, rgba(124, 77, 255, 0.15), rgba(84, 181, 255, 0.1));">
              <svg class="w-7 h-7 sm:w-8 sm:h-8" style="color: var(--violet);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex items-start justify-between mb-2">
                <h3 class="text-xl sm:text-2xl font-bold group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">Three Month Face to Face Course</h3>
                <svg class="w-5 h-5 sm:w-6 sm:h-6 flex-shrink-0 ml-2 transition-transform group-hover:translate-x-1" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </div>
              <p class="text-sm text-gray-500 mb-3">Most Popular Choice</p>
            </div>
          </div>
          <p class="text-base sm:text-lg leading-relaxed mb-4" style="color: var(--bc-dark-gray);">
            Our flagship course for adults. Learn English in small groups with native teachers, flexible schedules, and proven results. Perfect for all levels from beginner to advanced.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(124, 77, 255, 0.1); color: var(--violet);">Face-to-face</span>
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(124, 77, 255, 0.1); color: var(--violet);">3 months</span>
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(124, 77, 255, 0.1); color: var(--violet);">All levels</span>
          </div>
        </a>

        <!-- Cambridge Exam Preparation -->
        <a href="/courses/adults/cambridge" class="group block rounded-3xl p-6 sm:p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="flex items-start gap-4 mb-4">
            <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, rgba(255, 94, 168, 0.2), rgba(255, 20, 147, 0.1));">
              <svg class="w-7 h-7 sm:w-8 sm:h-8" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex items-start justify-between mb-2">
                <h3 class="text-xl sm:text-2xl font-bold group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">Cambridge Exam Preparation</h3>
                <svg class="w-5 h-5 sm:w-6 sm:h-6 flex-shrink-0 ml-2 transition-transform group-hover:translate-x-1" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </div>
              <p class="text-sm text-gray-500 mb-3">Internationally Recognized</p>
            </div>
          </div>
          <p class="text-base sm:text-lg leading-relaxed mb-4" style="color: var(--bc-dark-gray);">
            Prepare for Cambridge English exams (B1, B2, C1, C2) with expert guidance. Official exam center with high success rates and comprehensive preparation materials.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(255, 94, 168, 0.15); color: var(--bc-cta-pink);">Exam prep</span>
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(255, 94, 168, 0.15); color: var(--bc-cta-pink);">B1-C2</span>
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(255, 94, 168, 0.15); color: var(--bc-cta-pink);">Official center</span>
          </div>
        </a>

        <!-- Business English -->
        <a href="/courses/adults/business" class="group block rounded-3xl p-6 sm:p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="flex items-start gap-4 mb-4">
            <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(124, 77, 255, 0.05));">
              <svg class="w-7 h-7 sm:w-8 sm:h-8" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex items-start justify-between mb-2">
                <h3 class="text-xl sm:text-2xl font-bold group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">Business English</h3>
                <svg class="w-5 h-5 sm:w-6 sm:h-6 flex-shrink-0 ml-2 transition-transform group-hover:translate-x-1" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </div>
              <p class="text-sm text-gray-500 mb-3">Career Advancement</p>
            </div>
          </div>
          <p class="text-base sm:text-lg leading-relaxed mb-4" style="color: var(--bc-dark-gray);">
            Master professional communication skills for the workplace. Presentations, meetings, negotiations, emails, and industry-specific vocabulary for career success.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(35, 7, 90, 0.08); color: var(--bc-primary-blue);">Professional</span>
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(35, 7, 90, 0.08); color: var(--bc-primary-blue);">B1+</span>
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(35, 7, 90, 0.08); color: var(--bc-primary-blue);">Career focused</span>
          </div>
        </a>

        <!-- Online Courses -->
        <a href="/courses/adults/online" class="group block rounded-3xl p-6 sm:p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="flex items-start gap-4 mb-4">
            <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, rgba(47, 214, 200, 0.2), rgba(84, 181, 255, 0.2));">
              <svg class="w-7 h-7 sm:w-8 sm:h-8" style="color: var(--mint);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex items-start justify-between mb-2">
                <h3 class="text-xl sm:text-2xl font-bold group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">Online Courses</h3>
                <svg class="w-5 h-5 sm:w-6 sm:h-6 flex-shrink-0 ml-2 transition-transform group-hover:translate-x-1" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </div>
              <p class="text-sm text-gray-500 mb-3">Maximum Flexibility</p>
            </div>
          </div>
          <p class="text-base sm:text-lg leading-relaxed mb-4" style="color: var(--bc-dark-gray);">
            Learn English from anywhere with live online classes. Same expert teachers and quality curriculum, with the flexibility to fit your schedule and lifestyle.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(47, 214, 200, 0.15); color: var(--mint);">100% Online</span>
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(47, 214, 200, 0.15); color: var(--mint);">Live classes</span>
            <span class="px-3 py-1 text-xs sm:text-sm rounded-full" style="background: rgba(47, 214, 200, 0.15); color: var(--mint);">All levels</span>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-16 md:py-20" style="background: linear-gradient(180deg, transparent 0%, rgba(35, 7, 90, 0.02) 100%);">
    <div class="bc-container px-4">
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 md:mb-4" style="color: var(--bc-primary-blue);">
          Why Adults Choose British Council
        </h2>
        <p class="text-base sm:text-lg md:text-xl max-w-3xl mx-auto px-2" style="color: var(--bc-dark-gray);">
          Learning English as an adult comes with unique challenges. We understand your needs
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 max-w-6xl mx-auto">
        <div class="rounded-2xl md:rounded-3xl p-6 md:p-8 text-center" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(47, 214, 200, 0.2), rgba(84, 181, 255, 0.1));">
            <svg class="w-8 h-8" style="color: var(--mint);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold mb-3 text-lg md:text-xl" style="color: var(--bc-primary-blue);">Flexible Schedules</h3>
          <p class="text-sm md:text-base leading-relaxed" style="color: var(--bc-dark-gray);">
            Morning, afternoon, evening, and weekend classes. Learn English around your work and family commitments
          </p>
        </div>

        <div class="rounded-2xl md:rounded-3xl p-6 md:p-8 text-center" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(124, 77, 255, 0.15), rgba(84, 181, 255, 0.1));">
            <svg class="w-8 h-8" style="color: var(--violet);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="font-bold mb-3 text-lg md:text-xl" style="color: var(--bc-primary-blue);">Fast Results</h3>
          <p class="text-sm md:text-base leading-relaxed" style="color: var(--bc-dark-gray);">
            Intensive programs designed for adults who need to improve quickly for work, travel, or personal goals
          </p>
        </div>

        <div class="rounded-2xl md:rounded-3xl p-6 md:p-8 text-center" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(255, 94, 168, 0.2), rgba(255, 20, 147, 0.1));">
            <svg class="w-8 h-8" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="font-bold mb-3 text-lg md:text-xl" style="color: var(--bc-primary-blue);">Career Development</h3>
          <p class="text-sm md:text-base leading-relaxed" style="color: var(--bc-dark-gray);">
            Improve your job prospects, get promotions, and communicate confidently in international business
          </p>
        </div>

        <div class="rounded-2xl md:rounded-3xl p-6 md:p-8 text-center" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(124, 77, 255, 0.05));">
            <svg class="w-8 h-8" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold mb-3 text-lg md:text-xl" style="color: var(--bc-primary-blue);">Small Classes</h3>
          <p class="text-sm md:text-base leading-relaxed" style="color: var(--bc-dark-gray);">
            Maximum 14 students per class ensures personalized attention and maximum speaking practice
          </p>
        </div>

        <div class="rounded-2xl md:rounded-3xl p-6 md:p-8 text-center" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(0, 140, 69, 0.1), rgba(47, 214, 200, 0.1));">
            <svg class="w-8 h-8" style="color: var(--bc-success-green);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="font-bold mb-3 text-lg md:text-xl" style="color: var(--bc-primary-blue);">Official Certifications</h3>
          <p class="text-sm md:text-base leading-relaxed" style="color: var(--bc-dark-gray);">
            Prepare for and take official exams at our centers. Globally recognized qualifications
          </p>
        </div>

        <div class="rounded-2xl md:rounded-3xl p-6 md:p-8 text-center" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(84, 181, 255, 0.2), rgba(47, 214, 200, 0.1));">
            <svg class="w-8 h-8" style="color: var(--sky);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold mb-3 text-lg md:text-xl" style="color: var(--bc-primary-blue);">International Opportunities</h3>
          <p class="text-sm md:text-base leading-relaxed" style="color: var(--bc-dark-gray);">
            Open doors to study, work, and live abroad with confidence in your English abilities
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What Makes Us Different -->
  <section class="py-16 md:py-20" style="background: transparent;">
    <div class="bc-container px-4">
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 md:mb-4" style="color: var(--bc-primary-blue);">
          The British Council Difference
        </h2>
        <p class="text-base sm:text-lg md:text-xl max-w-3xl mx-auto px-2" style="color: var(--bc-dark-gray);">
          90+ years of teaching excellence and innovation
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 md:gap-8 max-w-5xl mx-auto">
        <div class="rounded-3xl p-6 md:p-8" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="flex items-start gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, rgba(47, 214, 200, 0.2), rgba(84, 181, 255, 0.1));">
              <span class="text-xl font-bold" style="color: var(--mint);">1</span>
            </div>
            <div>
              <h3 class="text-lg md:text-xl font-bold mb-2" style="color: var(--bc-primary-blue);">Expert Native Teachers</h3>
