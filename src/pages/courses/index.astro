  team: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>',
  clipboard: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>',
  globe: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>'
};
---

<Layout title={pageTitle} description={pageDescription}>
  <div style="--announcement-bar-height: 0px;">
    <Header />
  </div>

  <Hero
    title="All English Courses"
    subtitle="Discover our complete range of English courses for every age and goal. From young learners to professionals, we have the perfect course for you."
    ctaPrimary={{
      text: "Free Consultation",
      href: "#contact"
    }}
    ctaSecondary={{
      text: "Level Test",
      href: "/level-test"
    }}
    stats={[
      { value: "30,000+", label: "Students per year" },
      { value: "90+", label: "Years of experience" },
      { value: "15", label: "Centers in Spain" }
    ]}
  />

  <main class="pt-12 pb-20">
    <!-- Adults Courses Section -->
    <section class="py-16" style="background: transparent;">
      <div class="bc-container">
        <div class="flex items-center gap-4 mb-10">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, var(--bc-primary-blue), #3a1570);">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-3xl font-bold" style="color: var(--bc-primary-blue);">Adults</h2>
            <p class="text-base" style="color: var(--muted);">English courses for adults</p>
          </div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {coursesData.adults.map(course => (
            <div class="group rounded-2xl p-6 transform hover:-translate-y-2 transition-all cursor-pointer" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
                <svg class="w-6 h-6" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[course.icon]} />
              </div>
              <h3 class="text-lg font-bold mb-2 group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">
                {course.title}
              </h3>
              <p class="text-sm mb-4 leading-relaxed" style="color: var(--bc-dark-gray);">
                {course.description}
              </p>
              <div class="space-y-2 mb-6">
                {course.features.map(feature => (
                  <div class="flex items-center gap-2">
                    <div class="w-4 h-4 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                      <svg class="w-2.5 h-2.5" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-xs" style="color: var(--muted);">{feature}</span>
                  </div>
                ))}
              </div>
              <Button href={course.href} variant="primary" size="sm" class="w-full">
                Learn More
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </Button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Children & Teens Courses Section -->
    <section class="py-16" style="background: linear-gradient(180deg, transparent 0%, rgba(35, 7, 90, 0.02) 50%, transparent 100%);">
      <div class="bc-container">
        <div class="flex items-center gap-4 mb-10">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, var(--bc-cta-pink), #ff69b4);">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-3xl font-bold" style="color: var(--bc-primary-blue);">Children & Teens</h2>
            <p class="text-base" style="color: var(--muted);">English courses for kids aged 2-17</p>
          </div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {coursesData.children.map(course => (
            <div class="group rounded-2xl p-6 transform hover:-translate-y-2 transition-all cursor-pointer" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform" style="background: linear-gradient(135deg, rgba(255, 20, 147, 0.1), rgba(255, 20, 147, 0.05));">
                <svg class="w-6 h-6" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[course.icon]} />
              </div>
              <h3 class="text-lg font-bold mb-2 group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">
                {course.title}
              </h3>
              <p class="text-sm mb-4 leading-relaxed" style="color: var(--bc-dark-gray);">
                {course.description}
              </p>
              <div class="space-y-2 mb-6">
                {course.features.map(feature => (
                  <div class="flex items-center gap-2">
                    <div class="w-4 h-4 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                      <svg class="w-2.5 h-2.5" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-xs" style="color: var(--muted);">{feature}</span>
                  </div>
                ))}
              </div>
              <Button href={course.href} variant="primary" size="sm" class="w-full">
                Learn More
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </Button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Corporate Courses Section -->
    <section class="py-16" style="background: transparent;">
      <div class="bc-container">
        <div class="flex items-center gap-4 mb-10">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, var(--violet), var(--pink));">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-3xl font-bold" style="color: var(--bc-primary-blue);">Corporate</h2>
            <p class="text-base" style="color: var(--muted);">English solutions for businesses</p>
          </div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl">
          {coursesData.corporate.map(course => (
            <div class="group rounded-2xl p-6 transform hover:-translate-y-2 transition-all cursor-pointer" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
                <svg class="w-6 h-6" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[course.icon]} />
              </div>
              <h3 class="text-lg font-bold mb-2 group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">
                {course.title}
              </h3>
              <p class="text-sm mb-4 leading-relaxed" style="color: var(--bc-dark-gray);">
                {course.description}
              </p>
              <div class="space-y-2 mb-6">
                {course.features.map(feature => (
                  <div class="flex items-center gap-2">
                    <div class="w-4 h-4 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                      <svg class="w-2.5 h-2.5" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-xs" style="color: var(--muted);">{feature}</span>
                  </div>
                ))}
              </div>
              <Button href={course.href} variant="primary" size="sm" class="w-full">
                Learn More
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </Button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section id="contact" class="py-20 relative overflow-hidden mt-10">
      <div class="absolute inset-0" style="background: linear-gradient(135deg, var(--bc-primary-blue), #3a1570);"></div>

      <div class="bc-container relative z-10 text-center text-white">
        <h2 class="text-3xl md:text-5xl font-bold mb-6">
          Find Your Perfect Course
        </h2>
        <p class="text-lg md:text-xl mb-10 max-w-2xl mx-auto" style="opacity: 0.95;">
          Not sure which course is right for you? Take our free level test or book a consultation with our experts.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="secondary" size="lg" class="bg-white hover:bg-white" style="color: var(--bc-primary-blue); box-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);">
            Take Level Test
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </Button>
          <Button variant="outline" size="lg" style="border: 2px solid white; background: transparent; color: white;">
            Book Consultation
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </Button>
        </div>
      </div>
    </section>
  </main>
</Layout>