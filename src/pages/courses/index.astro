---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Button from '../../components/Button.astro';

const pageTitle = "All English Courses";
const pageDescription = "Explore all our English courses for adults, children, teens, and corporate clients. From face-to-face classes to online learning and exam preparation.";

const coursesData = {
  adults: [
    {
      title: "Three Month Face-to-Face Course",
      description: "Our most popular course. Attend classes at our centres with expert teachers.",
      features: ["12-week intensive programs", "All levels: A1 to C2", "Expert native teachers"],
      href: "/courses/adults/termly",
      icon: "building"
    },
    {
      title: "Cambridge Exam Preparation",
      description: "Get certified with Cambridge English qualifications.",
      features: ["Exam-focused methodology", "Official exam centre", "Practice exam materials"],
      href: "/courses/adults/cambridge",
      icon: "certificate"
    },
    {
      title: "Business English",
      description: "Boost your career with professional English skills.",
      features: ["Professional communication", "Industry-specific vocabulary", "Flexible schedules"],
      href: "/courses/adults/business",
      icon: "briefcase"
    },
    {
      title: "Online Courses",
      description: "Learn English from anywhere with our flexible online programs.",
      features: ["Learn from anywhere", "Live interactive sessions", "24/7 platform access"],
      href: "/courses/adults/online",
      icon: "laptop"
    }
  ],
  children: [
    {
      title: "Learning Time with Timmy",
      description: "Fun English learning for toddlers and preschoolers aged 2-5.",
      features: ["Ages 2-5", "Interactive activities", "Playful learning environment"],
      href: "/courses/children/timmy",
      icon: "teddy"
    },
    {
      title: "Primary Plus",
      description: "English courses designed for primary school children aged 6-11.",
      features: ["Ages 6-11", "Project-based learning", "21st century skills"],
      href: "/courses/children/primary",
      icon: "book"
    },
    {
      title: "Secondary Plus",
      description: "English courses for teenagers aged 12-17 with real-world focus.",
      features: ["Ages 12-17", "Critical thinking", "Academic preparation"],
      href: "/courses/children/secondary",
      icon: "graduate"
    },
    {
      title: "Cambridge Exam Preparation",
      description: "Prepare young learners for Cambridge English exams.",
      features: ["Ages 12-17", "Exam-focused", "Official certification"],
      href: "/courses/children/cambridge",
      icon: "certificate"
    }
  ],
  corporate: [
    {
      title: "Corporate English Training",
      description: "Customized business English solutions for your team.",
      features: ["Customized programs", "On-site or online", "Industry expertise"],
      href: "/courses/corporate/training",
      icon: "team"
    },
    {
      title: "English Assessment",
      description: "Test your team's English level with our professional assessments.",
      features: ["Accurate placement", "Quick results", "Detailed reports"],
      href: "/courses/corporate/assessment",
      icon: "clipboard"
    },
    {
      title: "Online Corporate Solutions",
      description: "Flexible learning options for busy professionals.",
      features: ["Flexible scheduling", "Live instructor-led", "Self-paced options"],
      href: "/courses/corporate/online",
      icon: "globe"
    }
  ]
};

const icons = {
  building: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>',
  certificate: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>',
  briefcase: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>',
  laptop: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>',
