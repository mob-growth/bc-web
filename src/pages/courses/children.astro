---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Button from '../../components/Button.astro';

const pageTitle = "English Courses for Children & Teens (Ages 2-17) - British Council Spain";
const pageDescription = "Fun, effective English courses for children and teenagers. Expert teachers, engaging activities, and proven results for ages 2-17.";

const courses = [
  {
    id: 'timmy',
    title: 'Learning Time with Timmy',
    ageRange: '2-5 years',
    description: 'Play-based learning that sparks curiosity and builds a love for English through songs, stories, and activities with Timmy.',
    href: '/courses/children/timmy',
