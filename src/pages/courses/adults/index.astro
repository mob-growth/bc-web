---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Hero from '../../../components/Hero.astro';
import Button from '../../../components/Button.astro';

const pageTitle = "English Courses for Adults";
const pageDescription = "Transform your English skills with British Council Spain. Face-to-face courses, Cambridge exam preparation, Business English, and flexible online learning options.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />

  <!-- Hero Section -->
  <Hero
    title="English Courses for Adults"
    subtitle="Learn English with the world's English experts. Choose from face-to-face classes, online courses, exam preparation, and Business English programs designed for your success."
    ctaPrimary={{
      text: "Book Free Consultation",
      href: "#contact"
    }}
    ctaSecondary={{
      text: "Explore Courses",
      href: "#courses"
    }}
    stats={[
      { value: "80+", label: "Years of Excellence" },
      { value: "400K+", label: "Students Worldwide" },
      { value: "100+", label: "Countries" }
    ]}
  />

  <!-- Course Categories Section -->
  <section id="courses" class="py-20 relative" style="background: transparent;">
    <div class="bc-container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: var(--bc-primary-blue);">
          Choose Your Learning Path
        </h2>
        <p class="text-lg md:text-xl max-w-3xl mx-auto" style="color: var(--bc-dark-gray);">
          Whether you want to study in a classroom, prepare for an exam, advance your career, or learn online, we have the perfect course for you.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Three Month Course Card -->
        <div class="group rounded-3xl p-8 transform hover:-translate-y-2 transition-all cursor-pointer" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform" style="background: linear-gradient(135deg, var(--bc-primary-blue), #3a1570);">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">
            Three Month Face-to-Face Course
          </h3>
          <p class="text-base mb-6 leading-relaxed" style="color: var(--bc-dark-gray);">
            Our most popular option. Attend classes at our centres in Madrid or Barcelona with expert teachers and an international community of learners.
          </p>
          <div class="space-y-3 mb-8">
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">12-week intensive programs</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">All levels: A1 to C2</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">Expert native teachers</span>
            </div>
          </div>
          <Button href="/courses/adults/termly" variant="primary" size="md" class="w-full">
            Learn More
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </Button>
        </div>

        <!-- Cambridge Exam Prep Card -->
        <div class="group rounded-3xl p-8 transform hover:-translate-y-2 transition-all cursor-pointer" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform" style="background: linear-gradient(135deg, var(--bc-cta-pink), #ff69b4);">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">
            Cambridge Exam Preparation
          </h3>
          <p class="text-base mb-6 leading-relaxed" style="color: var(--bc-dark-gray);">
            Get certified with Cambridge English qualifications. Specialized preparation courses for B2 First, C1 Advanced, and C2 Proficiency exams.
          </p>
          <div class="space-y-3 mb-8">
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">Exam-focused methodology</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">Official exam centre</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">Practice exam materials</span>
            </div>
          </div>
          <Button href="/courses/adults/cambridge" variant="primary" size="md" class="w-full">
            Learn More
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </Button>
        </div>

        <!-- Business English Card -->
        <div class="group rounded-3xl p-8 transform hover:-translate-y-2 transition-all cursor-pointer" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform" style="background: linear-gradient(135deg, var(--violet), var(--pink));">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">
            Business English
          </h3>
          <p class="text-base mb-6 leading-relaxed" style="color: var(--bc-dark-gray);">
            Boost your career with professional English skills. Learn to communicate confidently in meetings, presentations, and international business contexts.
          </p>
          <div class="space-y-3 mb-8">
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">Professional communication</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">Industry-specific vocabulary</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">Flexible schedules</span>
            </div>
          </div>
          <Button href="/courses/adults/business" variant="primary" size="md" class="w-full">
            Learn More
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </Button>
        </div>

        <!-- Online Courses Card -->
        <div class="group rounded-3xl p-8 transform hover:-translate-y-2 transition-all cursor-pointer" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform" style="background: linear-gradient(135deg, var(--mint), var(--sky));">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 group-hover:text-pink-500 transition-colors" style="color: var(--bc-primary-blue);">
            Online Summer Courses
          </h3>
          <p class="text-base mb-6 leading-relaxed" style="color: var(--bc-dark-gray);">
            Learn English from anywhere with our flexible online programs. Live classes with qualified teachers and self-paced learning options available.
          </p>
          <div class="space-y-3 mb-8">
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">Learn from anywhere</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">Live interactive sessions</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full flex items-center justify-center" style="background: rgba(255, 20, 147, 0.1);">
                <svg class="w-3 h-3" style="color: var(--bc-cta-pink);" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm" style="color: var(--muted);">24/7 platform access</span>
            </div>
          </div>
          <Button href="/courses/adults/online" variant="primary" size="md" class="w-full">
            Learn More
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Why British Council Section -->
  <section class="py-20" style="background: linear-gradient(180deg, transparent 0%, rgba(35, 7, 90, 0.02) 100%);">
    <div class="bc-container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: var(--bc-primary-blue);">
          Why Choose British Council?
        </h2>
        <p class="text-lg max-w-2xl mx-auto" style="color: var(--bc-dark-gray);">
          We're the world's English experts with over 80 years of experience teaching English
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-20 h-20 mx-auto mb-6 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.05), rgba(35, 7, 90, 0.02));">
            <svg class="w-10 h-10" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3" style="color: var(--bc-primary-blue);">Expert Teachers</h3>
          <p class="text-base leading-relaxed" style="color: var(--bc-dark-gray);">
            Learn from qualified, experienced native English teachers who are passionate about your success
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 mx-auto mb-6 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(255, 20, 147, 0.1), rgba(255, 20, 147, 0.05));">
            <svg class="w-10 h-10" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3" style="color: var(--bc-primary-blue);">Global Recognition</h3>
          <p class="text-base leading-relaxed" style="color: var(--bc-dark-gray);">
            Our certificates are recognized worldwide by employers and universities in over 100 countries
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 mx-auto mb-6 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.05), rgba(35, 7, 90, 0.02));">
            <svg class="w-10 h-10" style="color: var(--bc-primary-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3" style="color: var(--bc-primary-blue);">Proven Results</h3>
          <p class="text-base leading-relaxed" style="color: var(--bc-dark-gray);">
            Over 400,000 students worldwide trust us to help them achieve their English learning goals
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="contact" class="py-20 relative overflow-hidden">
    <div class="absolute inset-0" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.03) 0%, rgba(255, 20, 147, 0.03) 100%);"></div>

    <div class="bc-container relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-5xl font-bold mb-6" style="color: var(--bc-primary-blue);">
          Ready to Start Your English Journey?
        </h2>
        <p class="text-lg md:text-xl mb-10 max-w-2xl mx-auto" style="color: var(--bc-dark-gray);">
          Book a free consultation with our English experts. We'll help you find the perfect course to achieve your goals.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <Button variant="secondary" size="lg">
            Book Free Consultation
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </Button>
          <Button variant="outline" size="lg">
            Take Level Test
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </Button>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 pt-8 border-t" style="border-color: var(--line);">
          <div>
            <p class="text-3xl font-bold mb-2" style="color: var(--bc-primary-blue);">80+</p>
            <p class="text-sm" style="color: var(--muted);">Years Teaching</p>
          </div>
          <div>
            <p class="text-3xl font-bold mb-2" style="color: var(--bc-primary-blue);">400K+</p>
            <p class="text-sm" style="color: var(--muted);">Students</p>
