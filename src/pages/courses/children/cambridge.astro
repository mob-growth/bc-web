---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Hero from '../../../components/Hero.astro';
import Button from '../../../components/Button.astro';

const pageTitle = "Cambridge Exam Preparation for Children - British Council Spain";
const pageDescription = "Official Cambridge exam preparation for children and teens (7-17 years). Expert training for Young Learners, KET, PET, FCE, and CAE exams at British Council Spain.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div style="--announcement-bar-height: 0px;">
    <Header />
  </div>

  <main class="pt-12">
    <!-- Hero Section -->
    <Hero
    title="Cambridge Exam Preparation for Children & Teens"
    subtitle="Give your child a globally recognized English qualification. Our expert preparation courses for Cambridge exams boost confidence and open doors to international opportunities."
    ctaPrimary={{
      text: "Book Free Consultation",
      href: "#contact"
    }}
    ctaSecondary={{
      text: "Check Exam Dates",
      href: "#exams"
    }}
    stats={[
      { value: "7-17", label: "Years Old" },
      { value: "Official", label: "Exam Centre" },
      { value: "98%", label: "Pass Rate" }
    ]}
  />

  <!-- Trust Badge -->
  <section class="py-12" style="background: transparent;">
    <div class="bc-container">
      <div class="text-center">
        <div class="inline-flex items-center gap-4 px-8 py-4 rounded-full" style="background: linear-gradient(135deg, rgba(255, 20, 147, 0.1), rgba(255, 94, 168, 0.1)); border: 2px solid rgba(255, 20, 147, 0.3);">
          <svg class="w-8 h-8" style="color: var(--bc-cta-pink);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
          <span class="text-xl font-bold" style="color: var(--bc-primary-blue);">Official Cambridge Exam Centre</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Available Exams -->
  <section id="exams" class="py-20" style="background: transparent;">
    <div class="bc-container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: var(--bc-primary-blue);">
          Cambridge Exams for Every Age
        </h2>
        <p class="text-lg md:text-xl max-w-3xl mx-auto" style="color: var(--bc-dark-gray);">
          From first steps to advanced proficiency, we prepare children for every Cambridge qualification
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Young Learners Starters -->
        <div class="rounded-3xl p-8 transform hover:-translate-y-2 transition-all" style="background: var(--glass); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid var(--line); box-shadow: var(--shadow-md);">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-14 h-14 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, rgba(255, 182, 151, 0.2), rgba(255, 94, 168, 0.1));">
              <svg class="w-7 h-7 text-white" style="color: var(--peach);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
