---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Hero from '../../../components/Hero.astro';
import Button from '../../../components/Button.astro';
import RegistrationModal from '../../../components/RegistrationModal.astro';

const pageTitle = "English Courses for Children & Teens (2-17 years)";
const pageDescription = "Give your child the gift of English with British Council Spain. Expert teachers, proven methods, and courses designed for ages 2-17. Build confidence and unlock global opportunities.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />

  <!-- Hero Section -->
  <Hero
    title="Give Your Child the Gift of English"
    subtitle="Prepare your child for a world of opportunities with British Council's proven English courses for ages 2-17. Our expert teachers make learning engaging, fun, and effective."
    ctaPrimary={{
      text: "Book Free Consultation",
      href: "javascript:openRegistrationModal('children')"
    }}
    ctaSecondary={{
      text: "Explore Courses",
      href: "#courses"
    }}
    stats={[
      { value: "90+", label: "Years of Experience" },
      { value: "30,000+", label: "Children Learning" },
      { value: "95%", label: "Parent Satisfaction" }
    ]}
  />

  <!-- Trust Indicators -->
  <section class="py-12" style="background: transparent;">
    <div class="bc-container">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 rounded-full flex items-center justify-center mb-3" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
            <svg class="w-8 h-8" style="color: var(--bc-success-green);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <p class="text-sm font-semibold" style="color: var(--bc-primary-blue);">Certified Teachers</p>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 rounded-full flex items-center justify-center mb-3" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
            <svg class="w-8 h-8" style="color: var(--bc-success-green);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <p class="text-sm font-semibold" style="color: var(--bc-primary-blue);">Proven Methods</p>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 rounded-full flex items-center justify-center mb-3" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
            <svg class="w-8 h-8" style="color: var(--bc-success-green);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
            </svg>
          </div>
          <p class="text-sm font-semibold" style="color: var(--bc-primary-blue);">Fun & Engaging</p>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 rounded-full flex items-center justify-center mb-3" style="background: linear-gradient(135deg, rgba(35, 7, 90, 0.08), rgba(255, 20, 147, 0.04));">
            <svg class="w-8 h-8" style="color: var(--bc-success-green);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
